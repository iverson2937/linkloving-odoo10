<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <!--
        This template is the ribbon at the top of the salesteam dashboard that adds
        some figures to it. We call this rubbon the "SalesDashboard".
    -->
    <t t-name="sales_team.SalesDashboard">
        <div t-if="show_demo or values" class="o_sales_dashboard">
            <div t-attf-class="#{show_demo ? 'o_demo' : ''}">
                <table class="table table-condensed">
                    <tr>
                        <td class="o_text">
                            <div class="o_highlight">To do</div>
                            Today
                        </td>
                        <td class="o_main" title="去确认付款">
                            <a href="#" class="o_dashboard_action"
                               name="linkloving_account.action_account_payment_sale_confirm">
                                <span class="o_highlight">
                                    <t t-if="!show_demo">
                                        <t t-esc="values['payment_count']"/>
                                    </t>
                                    <t t-if="show_demo">
                                        0
                                    </t>
                                </span>
                                <br/>
                            </a>
                        </td>
                        <td class="o_main" title="To Activities">
                            <a href="#" class="o_dashboard_action" name="crm.crm_lead_action_activities"
                               data-extra="today">
                                <span class="o_highlight">
                                    <t t-if="!show_demo">
                                        <t t-esc="values['activity']['today']"/>
                                    </t>
                                    <t t-if="show_demo">
                                        7
                                    </t>
                                </span>
                                <br/>
                                Next Actions
                            </a>
                        </td>
                        <td class="o_main" title="My Pipeline" rowspan="2">
                            <a href="#" class="o_dashboard_action" name="crm.action_your_pipeline">
                                <span class="fa fa-th-large fa-3x"/>
                                <br/>
                                My Pipeline
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="o_text">Next 7 days</td>
                        <td class="o_main" title="去确认付款">
                            <a href="#" class="o_dashboard_action"
                               name="linkloving_account.action_account_payment_sale_confirm">
                                收款确认
                            </a>
                        </td>
                        <td class="o_main" title="To Activities">
                            <a href="#" class="o_dashboard_action" name="crm.crm_lead_action_activities"
                               data-extra="this_week">
                                <t t-if="!show_demo">
                                    <t t-esc="values['activity']['next_7_days']"/>
                                </t>
                                <t t-if="show_demo">
                                    28
                                </t>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <!-- Hide overdue when there is none -->
                        <td t-if="show_demo or (values and values['activity']['overdue'] != 0)" class="o_warning"
                            title="To Activities">
                            <a href="#" class="o_dashboard_action" name="crm.crm_lead_action_activities"
                               data-extra="overdue">
                                <t t-if="!show_demo">
                                    <t t-esc="values['activity']['overdue']"/>
                                    overdue
                                </t>
                                <t t-if="show_demo">
                                    2
                                </t>
                            </a>
                        </td>
                        <td t-if="show_demo or (values and values['closing']['overdue'] != 0)" class="o_warning"
                            title="To Opportunities">
                            <a href="#" class="o_dashboard_action" name="crm.action_your_pipeline"
                               data-extra="overdue_opp">
                                <t t-if="!show_demo">
                                    <t t-esc="values['closing']['overdue']"/>
                                    exp. closing
                                </t>
                                <t t-if="show_demo">
                                    3 exp. closing
                                </t>
                            </a>
                        </td>
                    </tr>
                </table>
            </div>


            <div t-if="show_demo" class="o_welcome_message">
                <div class="o_welcome_image">
                    <i class="fa fa-smile-o fa-5x"></i>
                </div>
                <div class="o_welcome_content">
                    <h2>Hi there!</h2>
                    <h4>Great sales journeys start with a clean pipeline.</h4>
                    <h4>Create a few opportunities in it.</h4>
                    <a class="btn btn-primary o_dashboard_action" name="crm.action_your_pipeline">My Pipeline</a>
                </div>
            </div>
        </div>
    </t>
</templates>
