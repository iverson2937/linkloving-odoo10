    <t t-name="show_bom_line_tr">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" class="click_tag_a" data-level="true"
                       href="#name">
                       <span class="fa fa-caret-down open-sign"></span>
                       <t t-esc="result.name"/>
                       <t t-if="result.process">
                           <span class="show_bom_line_process" style="margin-left:30px">  <t t-esc="result.process"/> </span>
                       </t>
                       <t t-if="result.service">
                           <span class="show_bom_line_service" style="margin-left:15px;margin-right:15px"> <t t-esc="result.service"/> </span>
                       </t>
                        <span>[库存:<t t-esc="result.stock"/> 在产:<t t-esc="result.on_produce"/> 需求:<t t-esc="result.require"/> ]</span>
                    </a>
                </h4>
            </div>
            <div id="name" class="panel-collapse collapse in">
                <div class="panel-body">
                    <t t-foreach="bom_lines" t-as="item">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#name" t-att-data-level="item.level" t-att-href="'#'+item.product_id" class="click_tag_a" t-att-data-product-id="item.product_id">
                                        <t t-if="item.level">
                                            <span class="fa fa-caret-right open-sign"></span>
                                        </t>
                                        <t t-esc="item.name"/>
                                        <t t-if="result.type">
                                            <span class="show_bom_line_type" style="margin-left:30px">  <t t-esc="result.type"/> </span>
                                        </t>
                                        <t t-if="result.process">
                                            <span class="show_bom_line_process" style="margin-left:15px">  <t t-esc="result.process"/> </span>
                                        </t>
                                        <t t-if="result.service">
                                            <span class="show_bom_line_service" style="margin-left:15px;margin-right:15px"> <t t-esc="result.service"/> </span>
                                        </t>
                                        <span>[库存:<t t-esc="result.stock"/> 在产:<t t-esc="result.on_produce"/> 需求:<t t-esc="result.require"/> ]</span>
                                    </a>
                                </h4>
                            </div>
                            <t t-if="item.level">
                                <div t-att-id="item.product_id" class="panel-collapse collapse">
                                    <div class="panel-body">

                                    </div>
                                </div>
                            </t>
                        </div>
                    </t>
                </div>
            </div>
        </div>
    </t>

