<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="purchase_order_line_wizard_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order.line.wizard</field>
            <field name="arch" type="xml">

                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id" option="{'no_create':True}"
                                       domain="[('is_company','=',True),('supplier','=',True)]"/>
                                <field name="product_id" option="{'no_create':True}"/>
                            </group>
                            <group>
                                <field name="product_uom_qty"/>
                                <field name="price_unit"/>
                                <field name="product_uom"/>
                            </group>
                        </group>
                    </sheet>
                </form>

            </field>
        </record>


    </data>
</openerp>