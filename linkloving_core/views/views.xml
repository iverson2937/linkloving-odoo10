<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="core_static" name="linkloving_core_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">

                <script type="text/javascript" src="/linkloving_core/static/src/js/form_widget_extend.js"/>
                <script type="text/javascript" src="/linkloving_core/static/src/js/product.js"/>
                <script type="text/javascript" src="/linkloving_core/static/src/js/tree_view.js"/>
                <script type="text/javascript" src="/linkloving_core/static/src/js/notify.js"/>
                <script type="text/javascript" src="/linkloving_core/static/src/js/search_input_bug.js"/>

                <link rel="stylesheet" href="linkloving_core/static/src/css/bootstrap-table.min.css"/>

                <script typ="text/javascript"
                        src="/linkloving_core/static/src/js/bootstrap-table/bootstrap-table.js"/>
                <script type="text/javascript"
                        src="/linkloving_core/static/src/js/bootstrap-table/bootstrap-editable.js"/>
                <script type="text/javascript"
                        src="/linkloving_core/static/src/js/bootstrap-table/html2canvas.js"/>
                <script type="text/javascript"
                        src="/linkloving_core/static/src/js/bootstrap-table/bootstrap-table-export.min.js"/>
                <script type="text/javascript"
                        src="/linkloving_core/static/src/js/bootstrap-table/bootstrap-table-editable.js"/>
                <script type="text/javascript"
                        src="/linkloving_core/static/src/js/bootstrap-table/tableExport.js"/>
                <script typ="text/javascript"
                        src="/linkloving_core/static/src/js/bootstrap-table/bootstrap-table-zh-CN.min.js"/>

                <script type="text/javascript" src="/linkloving_core/static/src/js/jquery.treegrid.js"/>
                <script type="text/javascript"
                        src="/linkloving_core/static/src/js/treegrid/bootstrap-table-treegrid.js"/>

                <link rel="stylesheet" href="/linkloving_core/static/src/css/jquery.treegrid.css"/>


                <!--<script type="text/javascript" src="/linkloving_core/static/src/js/selectallm2m.js"/>-->

                <!--<script type="text/javascript" src="/linkloving_core/static/src/js/multi_selection.js"/>-->
                <script type="text/javascript" src="/linkloving_core/static/src/js/sticky.js"/>
                <script type="text/javascript" src="/linkloving_core/static/src/js/fix_table_top.js"/>
                <link rel="stylesheet" href="/linkloving_core/static/src/css/core.css"/>

            </xpath>
        </template>
        <record id="action_product_detail" model="ir.actions.client">
            <field name="name">产品详细页面</field>
            <field name="tag">product_detail</field>
        </record>
        <menuitem id="home_page_petstore_menu" name="产品详细页面" parent="stock.menu_stock_inventory_control"
                  action="action_product_detail"/>


        <record id="journal_dashboard_view_inherit_style" model="ir.ui.view">
            <field name="name">account.journal.dashboard.kanban.inherit.style</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view"/>
            <field name="arch" type="xml">

                <xpath expr="//kanban[contains(@class, 'o_kanban_dashboard')]" position="attributes">
                    <attribute name="class">o_kanban_view oe_background_grey o_kanban_dashboard my_account_dashboard
                        o_kanban_ungrouped o_account_kanban
                    </attribute>
                </xpath>
            </field>
        </record>


    </data>


</odoo>
