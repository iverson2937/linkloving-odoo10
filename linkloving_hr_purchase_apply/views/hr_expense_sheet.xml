<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_purchase_apply_form_inherit" model="ir.ui.view">
            <field name="name">报销单</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[1]' position="after">
                    <group>
                        <field name="balance" string="申购余额" readonly="1"/>
                        <field name="apply_line_ids" widget="many2many_tags" string="申购单"
                               options="{'no_create':True}"
                               domain="[('employee_id','=',employee_id),('state','=','approve')]">
                            <tree>
                                <field name="name" string="单号"/>
                                <field name="product_id" string="产品"/>
                                <field name="product_qty" string="数量"/>
                                <field name="description"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>


    </data>
</openerp>