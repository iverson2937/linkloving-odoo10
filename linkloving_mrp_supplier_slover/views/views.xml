<openerp>
    <data>

        <record id="linkloving_purchase_config_settings_form" model="ir.ui.view">
            <field name="name">purchase.config.settings.form</field>
            <field name="model">purchase.config.settings</field>
            <field name="inherit_id" ref="purchase.view_purchase_configuration"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='group_product_variant']" position="before">
                    <field name="combine_rule" widget="radio"/>
                </xpath>
            </field>
        </record>


        <record model="ir.ui.view" id="purchase_order_form_inherit">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header/button[@name='button_cancel']" position="before">
                    <button name="check_product_has_supplier" class="oe_edit_only" string="Check Suppliers"
                            type="object" attrs="{'invisible':[('state', 'not in', ('draft', 'make_by_mrp'))]}"/>

                </xpath>

                <xpath expr="//page/group/group/div/field[@name='date_planned']" position="replace">
                    <field name="date_planned"
                           attrs="{'readonly': [('state', 'not in', ('draft', 'sent'))]}"/>
                </xpath>

                <xpath expr="//page/field/tree/field[@name='date_planned']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


            </field>
        </record>

