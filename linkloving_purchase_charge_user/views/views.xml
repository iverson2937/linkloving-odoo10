<openerp>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="ll_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//group/group/field[@name='partner_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="user_id"/>
                </xpath>

            </field>
        </record>

        <!--&lt;!&ndash; Inherit Form View to Modify it &ndash;&gt;-->
        <record id="ll_view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[@name='sales_purchases']/group[@name='container_row_2']/group[@name='purchase']/field[@name='supplier']"
                       position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="po_user_id"/>
                </xpath>


            </field>
        </record>

        <record id="purchase_order_tree_inherit" model="ir.ui.view">
            <field name="name">purchase.order.tree.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="linkloving_purchase.purchase_order_tree_ll"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='state']" position="after">
                    <!-- Add new fields here -->
                    <field name="user_id"/>
                </xpath>
            </field>
        </record>

        <record id="res_partner_supplier_tree" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="linkloving_purchase.res_partner_supplier_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='category_id']" position="after">
                    <!-- Add new fields here -->
                    <field name="po_user_id"/>
                </xpath>
                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">po_user_id desc</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>