<odoo>
    <data>
        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="linkloving_account_budget_form">
            <field name="name">预算</field>
            <field name="model">linkloving.account.budget</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="set_to_done"
                                states="draft" string="确定"
                                type="object" class="oe_highlight"
                                help="Launch Configuration Wizard"/>

                        <field name="state" widget="statusbar"
                               readonly="1"/>
                    </header>
                    <sheet>


                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="简单描述"/>
                            </h1>
                        </div>
                        <group>


                            <group>
                                <field name="fiscal_year_id" options="{'no_create':True}"
                                       attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="department_id" attrs="{'readonly':[('state','=','done')]}"
                                       options="{'no_create':True}"/>
                                <field name="product_id" attrs="{'readonly':[('state','=','done')]}"
                                       options="{'no_create':True}"/>
                            </group>
                            <group>
                                <field name="amount" attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="create_uid" readonly="1" string="创建人"/>
                            </group>
                            <notebook colspan="2" attrs="{'invisible':[('sheet_ids','=',False)]}">
                                <page string="费用明细">
                                    <field name="sheet_ids" options="{'no_create':True}">
                                        <tree create="false">
                                            <field name="expense_no"/>
                                            <field name="employee_id"/>
                                            <field name="name"/>
                                            <field name="state"/>
                                            <field name="total_amount" sum="总计"/>
                                        </tree>
                                    </field>
                                </page>
                            </notebook>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="linkloving_account_budget_tree">
            <field name="name">预算</field>
            <field name="model">linkloving.account.budget</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="department_id"/>
                    <field name="product_id"/>
                    <field name="amount"/>
                    <field name="balance"/>
                    <field name="create_uid"/>
                </tree>
            </field>
        </record>

        <!-- actions opening views on models -->
        <record model="ir.actions.act_window" id="action_linkloving_account_budget">
            <field name="name">预算</field>
            <field name="res_model">linkloving.account.budget</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_account_payment" name="预算" sequence="10"
                  action="action_linkloving_account_budget"
                  parent="hr_expense.menu_hr_expense_root"/>


    </data>
</odoo>