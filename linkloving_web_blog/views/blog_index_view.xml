        <template id="web_blog_create_show" name="web create blog" page="True">

            <t t-call="website_blog.index">
                <html>
                    <head>
                        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>


                        <script src="/web/static/lib/jquery/jquery.js" type="text/javascript"/>
                        <link rel="stylesheet" href="/web/static/lib/bootstrap/css/bootstrap.css"/>
                        <script src="/linkloving_web_blog/static/src/js/bootstrap.min.js"/>


                        <link rel="stylesheet" href="/linkloving_web_blog/static/src/css/summernote.css"/>
                        <script src="/linkloving_web_blog/static/src/js/summernote.js" type="text/javascript"/>

                        <!--<script src="/linkloving_web_blog/static/src/js/bootstrapValidator.min.js"/>-->
                        <!--<link href="/linkloving_web_blog/static/src/css/bootstrapValidator.css" rel="stylesheet"/>-->

                        <script src="/linkloving_web_blog/static/src/js/blog_post_self.js" type="text/javascript"/>

                        <script src="/linkloving_web_blog/static/src/js/summernote-zh-CN.min.js"
                                type="text/javascript"/>


                        <title>
                            创建博文
                        </title>


                    </head>

                    <body>

                        <!--<div style="height:20px;weight:100%;">-->
                        <!--<a href="javascript:history.go(-2);">返回博客首页</a>-->
                        <!--</div>-->
                        <div class="create_my_self_blog" style="padding-top: 31px;">
                            <form class="form-horizontal" action="/blog/create_blog_post_index" method="post">

                                <div class="form-group">
                                    <label for="name" class="col-sm-2 control-label">主题</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="name" name="name" placeholder="主题"/>
                                        <span class="name-span" style="color: red;"></span>
                                        <!--t-attf-value="#{ddd_aaa.name}"-->
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="subtitle" class="col-sm-2 control-label">副标题</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="subtitle" name="subtitle"
                                               placeholder="副标题"/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="blog_id" class="col-sm-2 control-label">文章分类</label>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <select class="form-control" id="blog_type_general" name="blog_id"
                                                    placeholder="一级分类">

                                                <t t-foreach="type_list_one" t-as="page">
                                                    <option t-esc="page"/>
                                                </t>
                                            </select>
                                        </div>
                                        <div class="col-sm-3">
                                            <select class="form-control" id="blog_type_detailed"
                                                    name="blog_tag_type_id">

                                                <t t-foreach="type_list_two" t-as="page">
                                                    <option t-esc="page"/>
                                                </t>

                                            </select>
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label for="keyword" class="col-sm-2 control-label">关键词</label>
                                    <div class="col-sm-8">
                                        <input type="text" class="form-control" id="keyword" name="keyword"
                                               placeholder="关键词,关键词...."/>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="content" class="col-sm-2 control-label">内容</label>
                                    <div class="col-sm-8">
                                        <textarea class="form-control" id="content" style="display:none" rows="3"
                                                  name="content"/>
                                        <span class="content-span" style="color: red;"></span>
                                        <!--<div id="summernote">内容</div>-->
                                        <t t-call="linkloving_web_blog.summernote_show"/>

                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" style="background-color: #5cb85c;    height: 30px;"
                                                class="btn btn-default save_self_blog">完成
                                        </button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </body>
                </html>
            </t>
        </template>


        <template id="summernote_show" name="summernote show" page="True">

            <script src="/linkloving_web_blog/static/src/js/bootstrap.min.js"/>

            <script language="javascript">
                $(document).ready(function() {

                $('#summernote').summernote( {
                height: 400,
                lang: 'zh-CN',


                // toolbar
                toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['fontsize',['fontsize']],
                ['fontname', ['fontname']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen']]
                ],


                } );

                });
            </script>


            <div id="summernote"></div>


        </template>


        <template id="jump_blog_succeed" name="jump" page="True">

            <t t-call="website_blog.index">
                <script src="/web/static/lib/jquery/jquery.js" type="text/javascript"/>
                <script language="javascript">
                    $(document).ready(function() {
                    function jump(count) {
                    window.setTimeout(function(){
                    count--;
                    if(count > 0) {
                    $('#change_tab_blog_num_view').html(count);
                    jump(count);
                    } else {
                    location.href="/blog/new_blog_index";
                    }
                    }, 1000);
                    }
                    jump(8);
                    });
                </script>

                <div style="padding-top: 22%;text-align: center;">

                    <p>创建博文成功！还有&amp;nbsp; <span id="change_tab_blog_num_view" style="color:red;"></span> &amp;nbsp;秒
                        返回首页！
                        <a href="/blog/new_blog_index">点击返回首页</a>
                    </p>
                </div>
            </t>

        </template>


        <template id="blog_post_short_visits_view" name="visits show"
                  customize_show="True" active="True" inherit_id="website_blog.blog_post_short">


            <xpath expr="//span[@t-if='blog_post.visits &gt; 0']" position="replace">
                <t t-if="blog_post.visits &lt;= 1">&amp;nbsp; — &amp;nbsp;浏览次数</t>
                <t t-if="blog_post.visits &gt; 1">&amp;nbsp; — &amp;nbsp;浏览次数</t>
                <t t-esc="blog_post.visits"/>
            </xpath>


            <xpath expr="//h3[@t-field='blog.subtitle']" position="replace">
                <script src="/linkloving_web_blog/static/src/js/blog_post_self.js" type="text/javascript"/>


                <div t-attf-class="btn-group  "
                     style="display:block;overflow:hidden;">
                    <!--<button class="btn btn-danger js_publish_btn">取消发布</button>-->
                    <!--<button class="btn btn-success js_publish_btn">发布</button>-->

                    <button type="button" class="btn btn-danger btn-publish ">取消发布</button>
                    <button type="button" class="btn btn-primary btn-publish ">发布</button>

                    <button type="button" style="display:none" class="btn btn-warning btn-blog-delect ">删除</button>

                    <div style="display:inline-block;float:left;">
                        <input type="checkbox" id="top_all_checkbox" class="document_all_checkbox_blog"
                               style="margin: 12px;">全选
                        </input>
                    </div>


                </div>


            </xpath>


            <xpath expr="//div[@class='text-muted']" position="before">

                <link rel="stylesheet" href="/linkloving_web_blog/static/src/css/myblog_style.css"/>

                <div id="div_blog_checkbox">
                    <input id="blog_checkbox" type="checkbox" class="o_chat_header_blog"
                           t-att-name="blog_post.id">选中
                    </input>
                </div>

            </xpath>

            <xpath expr="//div[@class='o_sharing_links']" position="replace">
            </xpath>


            <!--<div id="div_blog_checkbox">-->
            <!--<input id="blog_checkbox" type="checkbox" class="o_chat_header_file"-->
            <!--t-att-name="#{ slug(blog_post) }">选中-->
            <!--</input>-->
            <!--</div>-->


        </template>


        <!-- Options: Blog Post : Read Next Article  -->
        <template id="website_blog.opt_blog_post_complete_read_next" name="Read next article"
                  inherit_id="website_blog.blog_post_complete" active="True" customize_show="True">


            <xpath expr="//div[@id='comments']|//div[@class='o_blog_post_complete o_sharing_links']" position="after">
                <div style="display: none;">
                    <t t-if="next_post">
                        <t t-call="website_blog.blog_cover">
                            <t t-set="cover_properties" t-value="next_post_cover_properties"/>
                            <t t-set="additionnal_classes" t-value="'cover_footer'"/>

                            <div class="blog_title">
                                <a class="hidden js_next"
                                   t-attf-href="/blog/#{ slug(next_post.blog_id) }/post/#{ slug(next_post) }/#wrap"/>
                                <h1 t-field="next_post.name" placeholder="Blog Post Title"/>
                                <h2 t-field="next_post.subtitle" placeholder="Subtitle"/>
                                <div>
                                    <t t-if="next_post.author_avatar">
                                        <span t-field="next_post.author_avatar"
                                              t-field-options='{"widget": "image", "class": "img-circle", "style":"width: 30px; margin-right: 10px; display:inline"}'/>
                                    </t>
                                    <span t-field="next_post.author_id" style="display: inline-block;" t-field-options='{
                "widget": "contact",
                "fields": ["name"]
                }'/>
                                </div>
                                <p class="mt32">Read Next
                                    <span class="fa fa-long-arrow-right"/>
                                </p>
                            </div>
                        </t>
                    </t>
                </div>
            </xpath>


            <xpath expr="//div[@class='blog_content mt32']" position="attributes">

                <attribute name="style">margin-right: auto;margin-left: auto;width: 970px;</attribute>

            </xpath>


            <xpath expr="//div[@id='comments']|//div[@class='o_blog_post_complete o_sharing_links']" position="replace">

                <t t-if="next_post">

                    <div style="text-align: center;">
                        <t t-if="previous_post">
                            <button type="button" class="btn" style="    background-color: #5cb85c;    height: 30px;">
                                <a class="js_next" style="    color: #02020e;"
                                   t-attf-href="/blog/#{ slug(previous_post.blog_id) }/post/#{ slug(previous_post) }/#wrap">
                                    上一页
                                </a>
                            </button>
                        </t>

                        <t t-if="next_post">
                            <button type="button" class="btn" style="    background-color: #5cb85c;    height: 30px;">
                                <a class="js_next" style="    color: #02020e;"
                                   t-attf-href="/blog/#{ slug(next_post.blog_id) }/post/#{ slug(next_post) }/#wrap">下一页
                                </a>
                            </button>
                        </t>
                    </div>
                </t>
            </xpath>


        </template>


        <!-- Option:Right Column: blogs -->
        <template id="website_blog.opt_blog_rc_blogs" name="Our Blogs" priority="6"
                  inherit_id="website_blog.index_right" active="True" customize_show="True">
            <xpath expr="//div[@id='main_column']" position="attributes">
                <attribute name="class">col-sm-8</attribute>
            </xpath>
            <xpath expr="//div[@id='blog_right_column']" position="inside">
                <section class="mt32 mb32">
                    <h4>Our Blogs</h4>
                    <ul class="nav nav-pills nav-stacked">
                        <t t-foreach="blogs" t-as="nav_blog">
                            <li t-att-class="nav_blog.id == blog.id and 'active' or None">
                                <a t-attf-href="#{blog_url(blog=nav_blog, tag=False, date_begin=False, date_end=False)}">
                                    <span t-field="nav_blog.name"/>
                                </a>
                            </li>
                        </t>
                    </ul>
                </section>
            </xpath>
        </template>

        <!-- Option:Right Column: about us -->
        <template id="website_blog.opt_blog_rc_about_us" name="About Us" priority="2"
                  inherit_id="website_blog.index_right" active="True" customize_show="True">
            <xpath expr="//div[@id='main_column']" position="attributes">
                <attribute name="class">col-sm-8</attribute>
            </xpath>
            <xpath expr="//div[@id='blog_right_column']" position="inside">
                <section class="mt32">
                    <h4>About us</h4>
                    <p>
                        Write a small text here for when <b>new visitors</b> find your website
                        through your <b>blog entries</b>, referenced in Google.
                    </p>
                </section>
            </xpath>
        </template>


