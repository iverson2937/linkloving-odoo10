<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- 科目 -->
        <record id="view_account_account_tree" model="ir.ui.view">
            <field name="name">account.account.tree</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='user_type_id']" position="replace">

                    <field name="debit" string="贷方"/>
                    <field name="credit" string="借方"/>
                    <field name="balance" string="余额"/>
                </xpath>

            </field>
        </record>

        <record id="view_account_tree" model="ir.ui.view">
            <field name="name">account.account.tree</field>
            <field name="model">account.account</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree colors="blue:type == 'view';black:type in ('other','receivable','payable','consolidation');gray:type == 'closed'"
                      string="Chart of accounts" toolbar="1">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="balance"/>
                    <!--<field name="company_currency_id"/>-->
                    <field name="company_id" groups="base.group_multi_company"/>
                    <!--<field name="type"/>-->
                    <field name="parent_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="action_account_tree" model="ir.actions.act_window">
            <field name="name">Chart of Accounts</field>
            <field name="res_model">account.account</field>
            <field name="view_type">tree</field>
            <field name="view_id" ref="view_account_tree"/>
            <field name="domain">[]</field>
        </record>

        <menuitem id="menu_account_account" name="科目" parent="account.menu_finance_reports"
                  groups="account.group_account_user"/>
        <menuitem id="menu_account_account_balance" name="科目余额" parent="menu_account_account"
                  action="action_account_tree"
                  groups="account.group_account_user"/>

    </data>
</odoo>

