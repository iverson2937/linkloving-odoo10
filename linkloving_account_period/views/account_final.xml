<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!--总账 form-->
        <record id="view_account_account_final_form" model="ir.ui.view">
            <field name="name">account.account.final.form</field>
            <field name="model">account.account.final</field>
            <field name="arch" type="xml">
                <form>
                    <field name="fiscalyear_id"/>
                    <field name="period_id"/>
                    <field name="account_id"/>
                    <!--<field name="debit"/>-->
                    <!--<field name="credit"/>-->
                </form>
            </field>
        </record>

        <!--总账 tree-->
        <record id="view_account_account_final_tree" model="ir.ui.view">
            <field name="name">final account</field>
            <field name="model">account.account.final</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="fiscalyear_id" string="会计年度"/>
                    <field name="period_id"/>
                    <field name="account_id"/>
                    <field name="start_debit" string="期初借方"/>
                    <field name="start_credit" string="期初贷方"/>
                    <field name="debit" string="本期借方"/>
                    <field name="credit" string="本期贷方"/>
                    <field name="end_debit" string="期末借方"/>
                    <field name="end_credit" string="期末贷方"/>
                    <field name="year_debit" string="本年度借方发生额"/>
                    <field name="year_credit" string="本年贷方发生额"/>


                </tree>
            </field>
        </record>

        <record id="view_account_account_final_tree" model="ir.ui.view">
            <field name="name">final account</field>
            <field name="model">account.account.final</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="fiscalyear_id" string="会计年度"/>
                    <field name="period_id"/>
                    <field name="account_id"/>
                    <field name="start_debit" string="期初借方"/>
                    <field name="start_credit" string="期初贷方"/>
                    <field name="debit" string="本期借方"/>
                    <field name="credit" string="本期贷方"/>
                    <field name="end_debit" string="期末借方"/>
                    <field name="end_credit" string="期末贷方"/>
                    <!--<field name="year_debit" string="本年度借方发生额"/>-->
                    <!--<field name="year_credit" string="本年贷方发生额"/>-->
                </tree>
            </field>
        </record>

        <record id="view_account_partner_final_tree" model="ir.ui.view">
            <field name="name">final account</field>
            <field name="model">account.account.final</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="fiscalyear_id" string="会计年度"/>
                    <field name="period_id"/>
                    <field name="partner_id"/>
                    <field name="account_id"/>
                    <field name="start_debit" string="期初借方"/>
                    <field name="start_credit" string="期初贷方"/>
                    <field name="debit" string="本期借方"/>
                    <field name="credit" string="本期贷方"/>
                    <field name="end_debit" string="期末借方"/>
                    <field name="end_credit" string="期末贷方"/>
                    <!--<field name="year_debit" string="本年度借方发生额"/>-->
                    <!--<field name="year_credit" string="本年贷方发生额"/>-->
                </tree>
            </field>
        </record>

        <record id="view_account_account_final_filter" model="ir.ui.view">
            <field name="name">final account</field>
            <field name="model">account.account.final</field>
            <field name="arch" type="xml">
                <search>
                    <field name="fiscalyear_id" string="会计年度"/>
                    <field name="period_id"/>
                    <field name="account_id"/>
                </search>
            </field>
        </record>


        <record id="action_account_account_final" model="ir.actions.act_window">
            <field name="name">总账</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.account.final</field>
            <field name="domain">[('partner_id','=',False)]</field>
            <!--<field name="view_type">form</field>-->
            <!--<field name="view_mode">form</field>-->
            <!--<field name="view_id" ref="view_base_module_upgrade_install"/>-->
            <!--<field name="target">new</field>-->
        </record>
        <record id="action_account_account_partner_final" model="ir.actions.act_window">
            <field name="name">业务伙伴分类账</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.account.final</field>
            <field name="domain">[('partner_id','!=',False)]</field>
            <!--<field name="view_type">form</field>-->
            <!--<field name="view_mode">form</field>-->
            <!--<field name="view_id" ref="view_base_module_upgrade_install"/>-->
            <!--<field name="target">new</field>-->
        </record>

        <menuitem id="menu_account_account_partner_final" action="action_account_account_partner_final"
                  name="业务伙伴分类账"
                  parent="account.menu_finance_entries"/>


        <menuitem id="menu_account_account_final" action="action_account_account_final"
                  name="总账"
                  parent="account.menu_finance_entries"/>


    </data>
</odoo>

