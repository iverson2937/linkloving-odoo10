<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="account_sale_order_cancel_form_view" model="ir.ui.view">
            <field name="name">sale.order.cancel.form</field>
            <field name="model">sale.order.cancel</field>
            <field name="arch" type="xml">
                <form string="Confirm Draft Invoices">
                    <p class="oe_grey">
                        确定取消选中的 SO？
                    </p>
                    <footer>
                        <button string="Confirm" name="action_cancel" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_sale_order_cancel"
                    multi="True"
                    key2="client_action_multi" name="取消订单"
                    res_model="sale.order.cancel" src_model="sale.order"
                    view_mode="form" target="new" view_type="form"/>

    </data>
</openerp>


