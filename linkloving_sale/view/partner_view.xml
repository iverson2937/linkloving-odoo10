<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>



        <record id="view_partner_form_linkloving" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="before">
                    <field name="team_id" attrs="{'invisible': [('customer','!=', True)]}"/>
                </xpath>
                 <xpath expr="//field[@name='category_id']" position="after">
                    <field name="source_id" string="渠道" attrs="{'invisible': [('customer','!=', True)]}"/>
                </xpath>
                 <xpath expr="//field[@name='lang']" position="after">
                    <field name="level" string="客户等级" attrs="{'invisible': [('customer','!=', True)]}"/>
                </xpath>
            </field>
        </record>


    </data>
</openerp>