<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="linkloving_view_order_tree" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <field name="date_order" position="replace">
                    <field name="pi_number"/>
                    <field name="team_id"/>
                    <field name="validity_date" widget="date" string="交货日期"/>
                </field>

                <field name="invoice_status" position="attributes">
                    <attribute name="string">对账状态</attribute>
                </field>
                <field name="invoice_status" position="before">
                    <field name="shipping_status" string="出货状态" invisible="1"/>
                    <field name="shipping_rate" widget="progressbar"/>
                </field>
            </field>
        </record>

        <record id="sale.action_orders" model="ir.actions.act_window">
            <field name="name">Sales Orders</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar,pivot,graph</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="context">{}</field>
            <field name="domain">[('state', 'not in', ('draft', 'sent'))]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a Quotation, the first step of a new sale.
                </p>
                <p>
                    Once the quotation is confirmed, it becomes a sales order.
                    You'll be able to invoice it and collect payments.
                    From the <i>Sales Orders</i> menu, you can track delivery
                    orders or services.
                </p>
            </field>
        </record>

        <record id="linkloving_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="domain">[('parent_id','=',partner_id),('type','=','invoice')]</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="replace">
                    <button name="action_cancel" states="draft,sent,sale" type="object" string="取消订单"
                            confirm="确定取消订单吗？"/>
                </xpath>

                <xpath expr="//button[@name='action_done']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


                <xpath expr="//field[@name='validity_date']" position="replace">
                    <field name="validity_date" string="交货日期" attrs="{'required':[('state','in',['draft','sent'])]}"/>
                </xpath>
                <xpath expr="//field[@name='partner_invoice_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>

                <xpath expr="//tree/field[@name='analytic_tag_ids']" position="replace">
                </xpath>
                <xpath expr="//tree/field[@name='price_unit']" position="after">
                    <field name="shipping_status" invisible="1"/>
                </xpath>
                <xpath expr="//tree/field[@name='name']" position="replace">
                    <field name="name" invisible="1"/>
                </xpath>
                <!--<xpath expr="//tree/field[@name='product_id']" position="after">-->
                <!--<field name="product_specs"/>-->
                <!--</xpath>-->

                <xpath expr="//tree/field[@name='product_id']" position="replace">
                    <field name="product_id" options="{'no_create': True}"/>
                    <field name="inner_code" string="国内简称" readonly="1"/>
                    <field name="inner_spec" string="国内型号" readonly="1"/>
                </xpath>
                <xpath expr="//tree/field[@name='tax_id']" position="attributes">
                    <attribute name='invisible'>1</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" domain="[('customer','=',True),('is_company','=',True)]"
                           options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="domain">[('parent_id','=',partner_id),('type','=','delivery')]</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
                <xpath expr="//div[@name='carrier_selection']" position="after">
                    <field name="remark"/>
                </xpath>


                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="tax_id"
                           domain="[('type_tax_use','&lt;&gt;','purchase')]" string="税金"
                           attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </xpath>
                <xpath expr="//field[@name='note']" position="before">
                    <group>
                        <field name="product_count" readonly="1" string="Total Amount"/>
                    </group>
                </xpath>
                <field name="partner_shipping_id" position="after">
                    <field name="pi_number"/>
                    <field name="is_emergency" attrs="{'readonly': [('state', '==', 'done')]}" invisible="1"/>
                </field>
                <xpath expr="//tree/field[@name='sequence']" position="replace">
                </xpath>

                <xpath expr="//button[@name='action_view_invoice']" position="before">
                    <field name="picking_ids" invisible="1"/>
                    <button type="object"
                            name="action_view_question"
                            context="{'sale_type': 'question'}"
                            class="oe_stat_button"
                            icon="fa-commenting-o"
                            attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user">
                        <field name="question_record_count" widget="statinfo" string="问题记录"/>
                    </button>


                    <button type="object"
                            name="action_view_question"
                            context="{'sale_type': 'inspection'}"
                            class="oe_stat_button"
                            icon="fa-file-o"
                            attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user">
                        <field name="inspection_report_count" widget="statinfo" string="验货报告"/>
                    </button>
                </xpath>

                <xpath expr="//div/field[@name='message_ids']" position="replace">
                    <field name="message_ids" widget="sale_threads"/>
                </xpath>

            </field>
        </record>


