<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="linkloving_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='analytic_tag_ids']" position="replace">
                </xpath>
                <xpath expr="//tree/field[@name='product_id']" position="after">
                    <field name="product_specs"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('customer','=',True),('is_company','=',True)]</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="attributes">
                    <attribute name="domain">[('parent_id','=',partner_id)]</attribute>
                </xpath>
                <xpath expr="//field[@name='date_order']" position="before">
                    <field name="team_id"/>
                </xpath>
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="tax_id"
                           domain="[('type_tax_use','&lt;&gt;','purchase')]" string="税金"
                           attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </xpath>
                <xpath expr="//field[@name='note']" position="before">
                    <group>
                        <field name="product_count" readonly="1" string="总数量"/>
                    </group>
                </xpath>
                <field name="partner_shipping_id" position="after">
                    <field name="pi_number"/>
                </field>
            </field>
        </record>


