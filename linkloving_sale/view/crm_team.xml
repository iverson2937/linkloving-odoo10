<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_crm_team_form" model="ir.ui.view">
            <field name="name">crm.team.form</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="code"/>
                    <field name="follow_id" options="{'no_create':True}"/>
                    <field name="is_domestic"/>
                </xpath>

            </field>
        </record>

        <menuitem id="menu_sales_shipping_record" sequence="97"
                  parent="sales_team.menu_base_partner" name="出货记录"/>


        <menuitem sequence="5" id="menu_sales_orders"
                  parent="sales_team.menu_base_partner" name="订单"/>

        <menuitem id="sale.menu_sale_quotations"
                  action="sale.action_quotations"
                  parent="menu_sales_orders"
                  sequence="1"/>

        <menuitem action="sale.action_orders"
                  id="sale.menu_sale_order" parent="menu_sales_orders"
                  sequence="12" groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"/>


        <!--移动部分到配置-->
        <menuitem id="crm.crm_opportunity_report_menu" name="Pipeline"
                  parent="sales_team.menu_sale_config"
                  groups="base.group_no_one"
                  action="crm.crm_opportunity_report_action" sequence="5"/>
        <menuitem name="Sales" action="sale.action_order_report_all"
                  id="sale.menu_report_product_all"
                  groups="base.group_no_one"
                  parent="sales_team.menu_sale_config" sequence="10"/>
        <menuitem id="crm.crm_activity_report_menu" name="Activities"
                  groups="base.group_no_one"
                  parent="sales_team.menu_sale_config"
                  action="crm.crm_activity_report_action" sequence="7"/>

        <!--delivery-->
        <menuitem id="delivery.sale_menu_delivery" name="Delivery"
                  parent="sales_team.menu_sale_config"
                  groups="base.group_no_one" sequence="12"/>
        <!--crm-->
        <menuitem id="crm.menu_crm_config_lead" name="Leads &amp; Opportunities"
                  parent="sales_team.menu_sale_config" sequence="11"
                  groups="base.group_no_one"/>
        <menuitem id="sales_team.menu_config_address_book"
                  parent="sales_team.menu_sale_config"
                  name="Contacts" sequence="4" groups="base.group_no_one"/>



    </data>
</openerp>