<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="inner_code" attrs="{'invisible':[('sale_ok','!=',True)]}" string="国内简称"/>
                    <field name="inner_spec" attrs="{'invisible':[('sale_ok','!=',True)]}"/>
                </xpath>
            </field>
        </record>
        <record id="product_template_tree_ol" model="ir.ui.view">
            <field name="name">product.template.tree.inherit.ol</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree string="Product" decoration-danger="forecast_qty&lt;0"
                      decoration-info="virtual_available&gt;=0">
                    <field name="sequence" widget="handle"/>
                    <field name="default_code"/>
                    <field name="name"/>
                    <field name="product_specs"/>
                    <field name="standard_price"/>
                    <field name="stock" string="库存"/>
                    <field name="forecast_qty" string="预测"/>
                    <field name="reordering_min_qty" string="最小"/>
                    <field name="reordering_max_qty" string="最大"/>
                </tree>
            </field>
        </record>
    </data>
</openerp>