<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sales_team.group_sale_salesman" model="res.groups">
        <field name="name">业务员</field>
        <field name="category_id" ref="base.module_category_sales_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">the user will have access to his own data in the sales application.</field>
    </record>

    <record id="sales_team.group_sale_salesman_all_leads" model="res.groups">
        <field name="name">团队主管</field>
        <field name="category_id" ref="base.module_category_sales_management"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        <field name="comment">the user will have access to all records of everyone in the sales application.</field>
    </record>

    <record id="group_sale_salesman_follow_orders" model="res.groups">
        <field name="name">跟单员</field>
        <field name="category_id" ref="base.module_category_sales_management"/>
        <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        <field name="comment">the user will have access to his own data in the sales application.</field>
    </record>


    <record id="sales_team.group_sale_manager" model="res.groups">
        <field name="name">销售经理</field>
        <field name="comment">the user will have an access to the sales configuration as well as statistic reports.
        </field>
        <field name="category_id" ref="base.module_category_sales_management"/>
        <field name="implied_ids" eval="[(4, ref('group_sale_salesman_follow_orders'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>


    <record id="sales_team.crm_rule_all_salesteam" model="ir.rule">
        <field name="name">Own Sale Team</field>
        <field ref="sales_team.model_crm_team" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
    </record>

    <record id="crm_rule_manager" model="ir.rule">
        <field name="name">All Salesteam</field>
        <field ref="sales_team.model_crm_team" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
    </record>

    <record id="my_customer" model="ir.rule">
        <field name="name">我的客户</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">['|','|',('team_id','=',False),('user_ids','child_of',user.id),'|',('user_id', '=',
            user.id),'&amp;',('user_id','=',False),('team_id','=',user.sale_team_id.id)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>

    <record id="my_customer_2" model="ir.rule">
        <field name="name">我的客户</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>
    <record id="my_team_customer" model="ir.rule">
        <field name="name">我团队客户</field>
        <field eval="0" name="perm_write"/>
        <field eval="0" name="perm_create"/>
        <field eval="0" name="perm_unlink"/>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">['|',('team_id.user_id','=',user.id),('is_company','=',False)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
    </record>


    <record id="my_follows_customer" model="ir.rule">
        <field name="name">我跟单的客户</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">['|',('team_id','=',user.sale_team_id.id),('is_company','=',False)]
        </field>
        <field name="groups" eval="[(4, ref('group_sale_salesman_follow_orders'))]"/>
    </record>
    <record id="all_customer" model="ir.rule">
        <field name="name">所有客户</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
    </record>

    <record id="my_orders" model="ir.rule">
        <field name="name">我的订单</field>
        <field ref="sale.model_sale_order" name="model_id"/>
        <field name="domain_force">['|',('user_id', '=', user.id),('partner_id.user_id', '=', user.id)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>


    <record id="my_team_orders" model="ir.rule">
        <field name="name">我团队的订单</field>
        <field ref="sale.model_sale_order" name="model_id"/>
        <field name="domain_force">['|',('user_id.sale_team_id.user_id','=',user.id),('user_id','=',user.id)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
    </record>

    <record id="my_follows_orders" model="ir.rule">
        <field name="name">我跟的订单</field>
        <field ref="sale.model_sale_order" name="model_id"/>
        <field name="domain_force">
            ['|',('create_uid','=',user.id),('user_id.sale_team_id.follow_id','=',user.id)]
        </field>
        <field name="groups" eval="[(4, ref('group_sale_salesman_follow_orders'))]"/>
    </record>

    <record id="all_orders" model="ir.rule">
        <field name="name">所有订单</field>
        <field ref="sale.model_sale_order" name="model_id"/>
        <field name="domain_force">
           [(1,'=',1)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
    </record>

</odoo>

