<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record model="ir.rule" id="linkloving_employee_user_rule">
            <field name="name">自己编辑自己</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record model="ir.rule" id="linkloving_employee_user_one_rule">
            <field name="name">主管</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>

        <record model="ir.rule" id="linkloving_employee_manager_one_rule">
            <field name="name">管理员</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>


    </data>

    <record id="hr.group_hr_manager" model="res.groups">
        <field name="name">管理员</field>
        <field name="comment">the user will have an access to the human resources configuration as well as statistic
            reports.
        </field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root'))]"/>
    </record>

