<odoo>
    <data>
        <template id="bom_update_static" name="linkloving_bom_update_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">

                <script type="text/javascript" src="/linkloving_bom_update/static/src/js/bom_update.js"/>
                <link rel="stylesheet" href="/linkloving_bom_update/static/src/css/bom_update.css"/>
            </xpath>
        </template>

        <record id="linkloving_mrp_production_form_view" model="ir.ui.view">
            <field name="name">mrp.production.tree.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="is_bom_update" invisible="1"/>
                    <label style="color:red;" string="BOM已发生变化" attrs="{'invisible': [('is_bom_update', '=', False)]}"/>
                </field>
            </field>
        </record>


        <record id="account_multi_apply_bom_form_view" model="ir.ui.view">
            <field name="name">multi.apply.bom.form</field>
            <field name="model">multi.apply.bom</field>
            <field name="arch" type="xml">
                <form string="批量将Bom的修改应用到MO">
                    <p class="oe_grey">
                        是否将选中产品的bom修改应用到MO？
                    </p>
                    <footer>
                        <button string="确定" name="action_ok" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_multi_apply_bom"
                    multi="True"
                    key2="client_action_multi" name="批量将Bom的修改应用到MO"
                    res_model="multi.apply.bom" src_model="product.template"
                    view_mode="form" target="new" view_type="form"/>


    </data>
</odoo>