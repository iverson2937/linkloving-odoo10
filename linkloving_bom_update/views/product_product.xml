<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_form_linkloving" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button ol_button" name="bom_update" icon="fa-tasks" string="产品BOM修改详细"
                            type="object"/>
                </xpath>

            </field>
        </record>
        <record id="view_product_template_form_linkloving" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button ol_button" name="bom_update" icon="fa-tasks" string="BOM修改"
                            type="object"/>
                </xpath>

            </field>
        </record>

    </data>
</openerp>




