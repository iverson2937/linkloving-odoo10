<odoo>
    <data>
        <record id="mrp_bom_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="bom_detail" type="object"
                            icon="fa-tasks" string="BOM修改">
                    </button>

                </div>

            </field>
        </record>

        <record id='bom_update_wizard_form' model='ir.ui.view'>
            <field name='name'>bom.update.wizard.form</field>
            <field name='model'>bom.update.wizard</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string="Confirm Draft Invoices">
                    <group>
                        <field name="postfix" required="1"/>
                    </group>


                    <footer>
                        <button string="新建BOM" name="bom_line_update" type="object" default_focus="1"
                                class="btn-primary new_bom" context="{'update':False}"/>
                        <button string="修改BOM" class="btn-default modify_current_bom" name="bom_line_update"
                                type="object"
                                context="{'update':True}"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>