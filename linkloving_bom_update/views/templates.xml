<odoo>
    <data>
        <record id="mrp_bom_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="bom_detail" type="object"
                            icon="fa-tasks" string="BOM修改">
                    </button>

                </div>
                <xpath expr="//tree" position="attributes">
                    <attribute name="decoration-warning">is_highlight==True</attribute>
                </xpath>
                <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_uom_id']" position="after">
                    <button name="toggle_highlight" type="object" icon="fa-flag"
                            attrs="{'invisible':[('is_highlight','!=',True)]}"/>
                    <field name="is_highlight" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id='bom_update_wizard_form' model='ir.ui.view'>
            <field name='name'>bom.update.wizard.form</field>
            <field name='model'>bom.update.wizard</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string="Confirm Draft Invoices">
                    <group>
                        <group>
                            <field name="partner_id" string="客户" domain="[('customer_code','!=',False)]"
                                   options="{'no_create':True}"/>

                        </group>
                        <group>
                            <field name="postfix" required="0"/>
                        </group>

                    </group>


                    <footer>
                        <button string="确认" name="bom_line_update" type="object" default_focus="1"
                                class="btn-primary new_bom" context="{}"/>
                        <button string="取消" class="btn-default modify_current_bom" name="create_cancel"
                                type="object"/>
                    </footer>
                </form>
            </field>
        </record>


    </data>
</odoo>