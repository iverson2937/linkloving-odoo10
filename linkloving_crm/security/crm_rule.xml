<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record model="ir.rule" id="sale_team_user_rule">
            <field name="name">部分可见</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[('user_id','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
        </record>

        <record model="ir.rule" id="sale_team_manager_rule">
            <field name="name">全部商机</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
        </record>

        <record id="crm.crm_rule_all_lead" model="ir.rule">
            <field name="name">可见自己团队商机</field>
            <field ref="model_crm_lead" name="model_id"/>
            <field name="domain_force">['|',('user_id.sale_team_id.user_id','=',user.id),('user_id','=',user.id)]
            </field>
            <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
        </record>
    </data>

    <record id="crm_team_daily_day_week" model="ir.rule">
        <field name="name">我团队工作报告</field>
        <field ref="model_crm_sale_daily" name="model_id"/>
        <field name="domain_force">[('team_id.user_id','=',user.id)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
    </record>

    <record id="crm_team_is_me_daily_day_week" model="ir.rule">
        <field name="name">我工作报告</field>
        <field ref="model_crm_sale_daily" name="model_id"/>
        <field name="domain_force">[('create_uid','=',user.id)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>

    <record id="crm_team_is_manage_daily_day_week" model="ir.rule">
        <field name="name">管理员工作报告</field>
        <field ref="model_crm_sale_daily" name="model_id"/>
        <field name="domain_force">[('create_uid','=',user.id)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_salesman_all_leads'))]"/>
    </record>

    <record id="crm_team_is_manage_daily_day_week" model="ir.rule">
        <field name="name">管理员</field>
        <field ref="model_crm_sale_daily" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]
        </field>
        <field name="groups" eval="[(4, ref('sales_team.group_sale_manager'))]"/>
    </record>


</odoo>
