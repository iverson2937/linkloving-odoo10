<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- page action -->
        <record id="stock_move_type_action" model="ir.actions.act_window">
            <field name="name">产品移动类型</field>
            <field name="res_model">stock.move.type</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new blog post.
                </p>
            </field>
        </record>


        <record id="stock_move_type_form" model="ir.ui.view">
            <field name="name">stock.move.type.form</field>
            <field name="model">stock.move.type</field>
            <field name="arch" type="xml">
                <form string="确认">

                    <sheet>
                        <group>
                            <h5>设置产品移动类型</h5>
                        </group>
                        <group>

                            <field name="type_name"/>
                            <field name="location_type_id"/>
                            <field name="location_dest_type_id"/>
                        </group>
                    </sheet>


                </form>
            </field>
        </record>


        <!-- page list view  -->
        <record id="stock_move_type_list" model="ir.ui.view">
            <field name="name">stock.move.type.list</field>
            <field name="model">stock.move.type</field>
            <field name="arch" type="xml">
                <tree string="产品移动类型">

                    <field name="type_key"/>
                    <field name="type_name"/>
                    <field name="location_type_id"/>
                    <field name="location_dest_type_id"/>
                </tree>
            </field>
        </record>


        <menuitem id="menu_stock_move_type_config" name="定义产品移动类型" parent="stock.menu_warehouse_config"
                  groups="stock.group_stock_manager"
                  action="stock_move_type_action"
        />


    </data>
</openerp>