        <record id="stock_move_linkloving_stock" model="ir.ui.view">
            <field name="name">stock.move.form.stock</field>
            <field name="model">stock.move</field>
            <field name="inherit_id" ref="stock.view_move_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='picking_type_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='create_date']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='move_dest_id']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='priority']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>


                <xpath expr="//field[@name='date']" position="attributes">
                    <attribute name="invisible">True</attribute>
                </xpath>

                <xpath expr="//field[@name='date']" position="after">
                    <field name="date" string="操作日期"/>
                    <field name="reason_stock"/>
                </xpath>


                <xpath expr="//field[@name='date']" position="before">
                    <field name="create_uid"/>
                    <field name="date_expected"/>
                    <field name="write_uid" string="操作人"/>
                </xpath>

            </field>
        </record>


        <record model="ir.ui.view" id="view_stock_picking_tree">
            <field name="name">stock.picking.wave.inherit.tree</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="create_uid"/>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="after">
                </xpath>
            </field>
        </record>
        <record id="action_stock_picking_confirm" model="ir.actions.act_window">
            <field name="name">Confirm Receipts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('picking_type_code','=','incoming'),('state','=','validate')]</field>
            <field name="context">{'picking_type_code':'incoming'}</field>
            <field name="help" type="html">
                <p>
                    No Stock Move to confirm.
                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="view_picking_internal_search_inherit">
            <field name="name">stock.picking.search.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <xpath expr="//group/filter[1]" position="replace">
                </xpath>
                <xpath expr="//filter[@name='picking_type']" position="after">
                    <filter name="picking_state" string="Status"
                            domain="[('state','in',('draft','waiting','confirmed','partially_available','assigned','qc_check','validate','waiting_in','done' ))]"
                            context="{'group_by':'state'}"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="origin"/>
                </xpath>

            </field>
        </record>


        <record id="stock.action_picking_tree_all" model="ir.actions.act_window">
            <field name="name">Stock Operations</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="domain">[('state','not in',['draft','cancel','done'])]</field>
            <field name="context">{
                'contact_display': 'partner_address',
                'search_default_picking_state' : 1,
                'search_default_picking_type' : 1,
                }
            </field>
            <field name="search_view_id" ref="view_picking_internal_search_inherit"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new transfer.
                </p>
                <p>
                    You can either do it immediately or mark it as Todo for future processing. Use your scanner to
                    validate the transferred quantity quicker.
                </p>
            </field>
        </record>


        <menuitem id="stock_picking_confirm" action="action_stock_picking_confirm"
                  parent="purchase.menu_purchase_control"
                  sequence="5"/>


        <!-- Inherit Form View to Modify it -->
        <record id="linkloving_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="delivery_rule"/>
                </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_immediate_transfer_inherit" model="ir.ui.view">
            <field name="name">stock.immediate.transfer.inherit</field>
            <field name="model">stock.immediate.transfer</field>
            <field name="inherit_id" ref="stock.view_immediate_transfer"/>
            <field name="arch" type="xml">

                <xpath expr="//group/p" position="replace">
                    <p>
                        未填写收货数量
                    </p>
                    <!-- Add your fields or attributes here -->
                </xpath>
                <xpath expr="//footer/button[@name='process']" position="attributes">
                    <attribute name="string">批量收货</attribute>
                </xpath>

            </field>
        </record>
    </data>
</openerp>