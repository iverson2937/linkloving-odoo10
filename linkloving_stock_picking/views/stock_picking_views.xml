<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_stock_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='do_new_transfer']" position="before">
                    <button name="action_post" string="提交" type="object" class="oe_highlight"
                            states="draft,partially_available,assigned"
                            groups="stock.group_stock_user"/>
                </xpath>
                <xpath expr="//button[@name='do_new_transfer']" position="replace">
                    <button name="do_new_transfer" states="validate" string="Validate"
                            groups="purchase.group_purchase_user" type="object" class="oe_highlight"/>
                    <button name="reject" states="validate" string="退回"
                            groups="purchase.group_purchase_user" type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//button[@name='do_new_transfer']" position="after">
                    <button name="action_check_pass" states="qc_check" string="品检完成" groups="stock.group_stock_user"
                            type="object" class="oe_highlight"/>
                    <button name="action_check_fail" states="qc_check" string="品检失败" groups="stock.group_stock_user"
                            type="object"/>

                </xpath>
            </field>
        </record>

        <record id="action_stock_picking_confirm" model="ir.actions.act_window">
            <field name="name">入库确认</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('picking_type_code','=','incoming')]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p>
                    没有要确认的入库记录
                </p>
            </field>
        </record>


        <menuitem id="stock_picking_confirm" action="action_stock_picking_confirm"
                  parent="purchase.menu_purchase_control"
                  sequence="5"/>
    </data>
</openerp>