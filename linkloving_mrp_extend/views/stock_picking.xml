<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='do_new_transfer']" position="after">
                    <button name="action_check_pass" states="qc_check" string="品检通过"
                            groups="linkloving_mrp_extend.group_charge_inspection"
                            type="object" class="oe_highlight"/>
                    <button name="action_check_fail" states="qc_check" string="品检失败"
                            groups="linkloving_mrp_extend.group_charge_inspection"
                            type="object"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>














