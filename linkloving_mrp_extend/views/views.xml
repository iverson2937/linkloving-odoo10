        <record id="view_mrp_production_filter" model="ir.ui.view">
            <field name="name">mrp.production.select</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='todo']" position="attributes">

                    <attribute name="domain">[('state','not in',['cancel','done'])]</attribute>
                        </xpath>
                <xpath expr="//filter[@name='waiting']" position="after">
                    <filter string="等待备料" name="waiting_material" domain="[('state', '=', 'waiting_material')]"/>
                    <filter string="备料中" name="prepare_material_ing" domain="[('state', '=', 'prepare_material_ing')]"/>
                    <filter string="备料完成" name="finish_prepare_material" domain="[('state', '=', 'finish_prepare_material')]"/>
                    <filter string="已领料" name="already_picking" domain="[('state', '=', 'already_picking')]"/>
                    <filter string="等待品检" name="waiting_quality_inspection" domain="[('state', '=', 'waiting_quality_inspection')]"/>
                    <filter string="品检中" name="quality_inspection_ing" domain="[('state', '=', 'quality_inspection_ing')]"/>
                    <filter string="等待入库" name="waiting_post_inventory" domain="[('state', '=', 'waiting_post_inventory')]"/>
                </xpath>
            </field>
        </record>





