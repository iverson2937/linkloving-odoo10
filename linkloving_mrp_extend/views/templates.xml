<openerp>
    <data>
        <record id='order_point_multi_create_wizard_form' model='ir.ui.view'>
            <field name='name'>orderpoint.multi.create.wizard.form</field>
            <field name='model'>orderpoint.multi.create.wizard</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form name='批量生成订货规则'>
                    <group>
                        <group>
                            <field name='min_qty' required='1'/>
                            <field name='max_qty' required='1'/>
                        </group>
                    </group>

                    <footer>
                        <button name='action_ok' type='object' string='确定' class='oe_highlight'/>
                        or
                        <button string='取消' class='oe_link' special='cancel'/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_order_point_multi_create"
                    multi="True"
                    key2="client_action_multi" name="批量生成订货规则"
                    res_model="orderpoint.multi.create.wizard" src_model="product.template"
                    view_mode="form" target="new" view_type="form"/>

    </data>
</openerp>