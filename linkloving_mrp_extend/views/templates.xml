<openerp>
    <data>
        <record id='order_point_multi_create_wizard_form' model='ir.ui.view'>
            <field name='name'>orderpoint.multi.create.wizard.form</field>
            <field name='model'>orderpoint.multi.create.wizard</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form name='批量生成订货规则'>
                    <group>
                        <group>
                            <field name='min_qty' required='1'/>
                            <field name='max_qty' required='1'/>
                        </group>
                    </group>

                    <footer>
                        <button name='action_ok' type='object' string='确定' class='oe_highlight'/>
                        or
                        <button string='取消' class='oe_link' special='cancel'/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_order_point_multi_create"
                    multi="True"
                    key2="client_action_multi" name="批量生成订货规则"
                    res_model="orderpoint.multi.create.wizard" src_model="product.template"
                    view_mode="form" target="new" view_type="form"/>


        <record id="multi_force_assign_view" model="ir.ui.view">
            <field name="name">multi.force.assign.form</field>
            <field name="model">multi.force.assign</field>
            <field name="arch" type="xml">
                <form string="批量强制可用">
                    <p class="oe_grey">
                        是否将选中单据强制可用？
                    </p>
                    <footer>
                        <button string="确定" name="action_ok" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_multi_force_assign"
                    multi="True"
                    key2="client_action_multi" name="批量强制可用"
                    res_model="multi.force.assign" src_model="stock.picking"
                    view_mode="form" target="new" view_type="form"/>

        <record id="multi_unreserve_view" model="ir.ui.view">
            <field name="name">multi.force.assign.form</field>
            <field name="model">multi.force.assign</field>
            <field name="arch" type="xml">
                <form string="批量取消保留">
                    <p class="oe_grey">
                        是否将选中单据取消保留？
                    </p>
                    <footer>
                        <button string="确定" name="action_multi_unreserve" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_multi_unreserve"
                    multi="True"
                    key2="client_action_multi" name="批量取消保留"
                    res_model="multi.force.assign" src_model="stock.picking"
                    view_mode="form" target="new" view_type="form" view_id="multi_unreserve_view"/>

        <report
                string="打印产成品"
                id="ssg_action_report_production_order"
                model="mrp.production"
                name="linkloving_mrp_extend.report_mrporder_extend"
                file="linkloving_mrp_extend.report.mrp_production_templates_extend.xml"
                report_type="qweb-pdf"
        />


    </data>
</openerp>