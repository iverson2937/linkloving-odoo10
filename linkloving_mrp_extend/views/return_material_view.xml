<odoo>
    <data>
        <record id="view_mrp_return_material_order_tree" model="ir.ui.view">
            <field name="name">退料单</field>
            <field name="model">mrp.return.material</field>
            <field name="arch" type="xml">
                <tree string="退料单">
                    <field name="name"/>
                    <field name="return_type"/>
                    <field name="production_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_mrp_return_material_order_form" model="ir.ui.view">
            <field name="name">退料单</field>
            <field name="model">mrp.return.material</field>
            <field name="arch" type="xml">
                <form string="退料单" no_create_edit="1">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,checking,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="......" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="production_id" readonly="1"/>
                                <field name="return_type" readonly="1"/>
                                <field name="move_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="return_location_id" readonly="1"/>
                                <field name="location_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="退料条目">
                                <field name="return_ids" readonly="1">
                                    <tree>
                                        <field name="product_id"/>
                                        <field name="return_qty"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>