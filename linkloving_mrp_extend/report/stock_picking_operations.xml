<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <report
                string="初始需求"
                id="stock.action_report_picking"
                model="stock.picking"
                report_type="qweb-pdf"
                name="stock.report_picking"
                file="stock.report_picking_operations"
        />
    </data>
    <data>
        <template id="stock.report_picking">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="stock.external_layout_barcode_right">
                        <div class="page">
                            <br/>
                            <div class="row">
                                <div class="col-xs-6">
                                    <div t-if="o.move_lines and o.move_lines[0].partner_id and o.move_lines[0].partner_id.id != o.partner_id.id">
                                        <span>
                                            <strong>Delidddvery Address:</strong>
                                        </span>
                                        <div t-field="o.move_lines[0].partner_id"
                                             t-options='{"widget": "contact", "fields": ["address", "name", "phone","mobile" ,"fax"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                    <div t-if="o.picking_type_id.code != 'internal' and (not o.move_lines or not o.move_lines[0].partner_id) and o.picking_type_id.warehouse_id.partner_id">
                                        <span>
                                            <strong>仓库地址:</strong>
                                        </span>
                                        <div t-field="o.picking_type_id.warehouse_id.partner_id"
                                             t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
                                    </div>
                                </div>
                                <div class="col-xs-5 col-xs-offset-1">
                                    <div t-if="o.picking_type_id.code=='incoming' and o.partner_id">
                                        <span>
                                            <strong>供应商地址:</strong>
                                        </span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='internal' and o.partner_id">
                                        <span>
                                            <strong>仓库地址:</strong>
                                        </span>
                                    </div>
                                    <div t-if="o.picking_type_id.code=='outgoing' and o.partner_id">
                                        <span>
                                            <strong>客户地址:</strong>
                                        </span>
                                    </div>
                                    <div t-if="o.sale_id" name="partner_header">
                                        <div t-field="o.sale_id.partner_shipping_id"
                                             t-options='{"widget": "contact", "fields": ["name","mobile", "phone"], "no_marker": True, "phone_icons": True}'/>
                                        <p t-if="o.sudo().partner_id.vat">VAT:
                                            <span t-field="o.sudo().partner_id.vat"/>
                                        </p>
                                    </div>
                                    <div t-if="o.purchase_id" name="partner_header">
                                        <div t-field="o.purchase_id.partner_id"
                                             t-options='{"widget": "contact", "fields": ["name","mobile", "phone"], "no_marker": True, "phone_icons": True}'/>
                                        <p t-if="o.sudo().partner_id.vat">VAT:
                                            <span t-field="o.sudo().partner_id.vat"/>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <br/>
                            <h1 t-field="o.name" class="mt0"/>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th t-if="o.origin">
                                            <strong>Order (Origin)</strong>
                                        </th>
                                        <th t-if="o.sale_id">
                                            <strong>备注</strong>
                                        </th>
                                        <th>
                                            <strong>Commitment Date</strong>
                                        </th>
                                        <th name="td_sched_date_h">
                                            <strong>Scheduled Date</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td t-if="o.origin">
                                            <span t-field="o.origin"/>
                                        </td>
                                        <td t-if="o.sale_id">
                                            <span t-field="o.sale_id.remark"/>
                                        </td>
                                        <td>
                                            <span t-field="o.date"/>
                                        </td>
                                        <td name="td_sched_date">
                                            <span t-field="o.min_date"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br/>
                            <br/>
                            <table class="table table-condensed mt48">
                                <thead>
                                    <tr>
                                        <th>序号</th>
                                        <th>
                                            <strong>产品</strong>
                                        </th>
                                        <th>
                                            <strong>需求</strong>
                                        </th>
                                        <th>
                                            <strong>状态</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-set="i" t-value="1"/>
                                    <tr t-foreach="o.move_lines" t-as="move">
                                        <td>
                                            <span t-esc="i"/>
                                        </td>
                                        <t t-set="i" t-value="i+1"/>
                                        <td>
                                            <span t-field="move.product_id"/>
                                        </td>
                                        <td>
                                            <span t-field="move.ordered_qty"/>
                                            <span t-field="move.product_uom"/>
                                        </td>
                                        <td>

                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <p t-if="o.state in ['draft', 'waiting', 'confirmed']">
                                You do not have any products reserved for this picking. Please click the 'Reserve'
                                button
                                to check if products are available.
                            </p>
                            <p t-field="o.note"/>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</odoo>


