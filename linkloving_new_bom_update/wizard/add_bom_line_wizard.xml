<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="add_bom_line_wizard_form_view" model="ir.ui.view">
            <field name="name">add.bom.line.wizard.form</field>
            <field name="model">add.bom.line.wizard</field>
            <field name="arch" type="xml">
                <form string="">
                    <group>
                        <field name="product_id" domain="[('type','=','product')]" placeholder="选择产品"/>
                        <field name="qty" string="数量" required="1"/>

                        <field name="to_add"/>
                        <field name="name" string="新产品名称" attrs="{'invisible':[('to_add','!=',True)]}"/>
                        <field name="product_specs" string="规格" attrs="{'invisible':[('to_add','!=',True)]}"/>
                    </group>
                    <footer>
                        <button string="确定" name="action_add" type="object" default_focus="1"
                                invisible="context.get('add', False)"
                                class="btn-primary save_add_action"/>
                        <button string="确定" name="action_edit" type="object" default_focus="1"
                                class="btn-primary save_add_action"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>