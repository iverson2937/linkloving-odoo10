<odoo>
    <data>
        <record id="mrp_bom_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="bom_detail_new" type="object"
                            icon="fa-tasks" string="BOM修改">
                    </button>
                    <button class="oe_stat_button" name="bom_approval_status" type="object"
                            icon="fa-tasks" string="审核操作">
                    </button>
                </div>

                <xpath expr="//tree" position="attributes">
                    <attribute name="default_order">product_id</attribute>
                </xpath>
            </field>
        </record>
        <record id='new_bom_update_wizard_form' model='ir.ui.view'>
            <field name='name'>bom.update.wizard.form</field>
            <field name='model'>bom.update.wizard</field>
            <field name="inherit_id" ref="linkloving_bom_update.bom_update_wizard_form"/>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <xpath expr="//button[@name='bom_line_update']" position="attributes">
                    <attributes name="name">new_bom_line_update</attributes>
                </xpath>
            </field>
        </record>

        <record id="linkloving_mrp_bom_tree_view" model="ir.ui.view">
            <field name="name">mrp.bom.tree.inherit</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='product_uom_id']" position="before">
                    <field name="who_review_now"/>
                </xpath>
                <xpath expr="//tree/field[@name='product_uom_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='product_qty']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//tree/field[@name='routing_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

            </field>
        </record>


        <record id="mrp_bom_temporary_form" model="ir.ui.view">
            <field name="name">mrp.bom.temporary.form</field>
            <field name="model">mrp.bom.temporary</field>
            <field name="arch" type="xml">
                <form string="确认">

                    <field name="bom_type" widget="radio"/>

                    <footer>
                        <button string="确定" name="get_product_bom" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_print_bom_str"
                    multi="True"
                    key2="client_action_multi" name="导出 物料清单"
                    res_model="mrp.bom.temporary" src_model="mrp.bom"
                    view_mode="form" target="new" view_type="form"/>


        <act_window name="导出 物料清单"
                    res_model="mrp.bom.temporary" src_model="mrp.bom"
                    id="ssg_act_hr_emp_payslip_list"
                    view_mode="form" target="new" view_type="form"
        />


    </data>
</odoo>


