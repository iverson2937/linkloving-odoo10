<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="account_mrp_production_combine_form_view" model="ir.ui.view">
            <field name="name">mrp.production.combine.form</field>
            <field name="model">mrp.production.combine</field>
            <field name="arch" type="xml">
                <form string="Confirm Draft Invoices">
                    <p class="oe_grey">
                        确定合并选中的 MO？
                    </p>
                    <footer>
                        <button string="Confirm" name="action_combine" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_mrp_production_combine"
                    multi="True"
                    key2="client_action_multi" name="合并 MO"
                    res_model="mrp.production.combine" src_model="mrp.production"
                    view_mode="form" target="new" view_type="form"/>

        <record id="mrp_production_form_view_ll" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">


                <xpath expr="//notebook/page[3]" position="after" attrs="{'invisible':[('source_mo_ids','=',False)]}">
                    <page string="原制造单">
                        <field name="source_mo_ids">
                            <tree editable="bottom" delete="0" create="0">
                                <field name="name" string="编号"/>
                                <field name="date_planned_start" string="交期"/>
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="product_uom_id"/>
                                <field name="origin"/>
                                <field name="state" string="状态"/>

                            </tree>
                        </field>

                    </page>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
