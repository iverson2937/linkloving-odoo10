<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="stock_view_inventory_form_inherit" model="ir.ui.view">
            <field name="name">partner.vendor.form</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='filter']" position="after">
                    <field name="create_uid"/>
                    <field name="remark"/>
                </xpath>
                <xpath expr="//button[@name='action_done']" position="attributes">
                    <attribute name="groups">base.group_erp_manager</attribute>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>

                <xpath expr="//field[@name='line_ids']//tree//field[@name='product_id']" position="attributes">
                    <attribute name="options">{'no_create':True}</attribute>
                </xpath>

            </field>
        </record>

    </data>
</openerp>