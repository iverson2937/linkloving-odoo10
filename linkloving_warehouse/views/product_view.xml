<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
                <!-- INHERITED TREE -->
        <record id="view_product_template_tree" model="ir.ui.view">
            <field name="name">product.template.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="product_specs"/>
                </field>
            </field>
        </record>
        <!-- INHERITED FORM -->
        <record id="view_product_form_linkloving" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="before">
                    <field name="area_id"/>
                </xpath>
                  <xpath expr="//field[@name='barcode']" position="after">
                      <field name="product_specs" string="产品规格"/>
                </xpath>

            </field>
        </record>



      <record id="view_product_template_form_linkloving" model="ir.ui.view">
            <field name="name">product.template.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='barcode']" position="before">
                    <field name="area_id" options="{'no_create':True}" string="库存位置"/>
                </xpath>
                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="product_specs" string="产品规格"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>




