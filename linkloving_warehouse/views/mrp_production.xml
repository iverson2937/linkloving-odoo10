<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="mrp_production_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.production.tree.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="attributes">
                    <attribute name="domain">[('bom_ids', '!=', False),('status', 'not in', ['eol',])]</attribute>
                </xpath>

            </field>
        </record>

        <record id="stock_view_inventory_form_inherit" model="ir.ui.view">
            <field name="name">partner.vendor.form</field>
            <field name="model">stock.inventory</field>
            <field name="inherit_id" ref="stock.view_inventory_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='filter']" position="after">
                    <field name="create_uid"/>
                </xpath>
                <xpath expr="//button[@name='action_done']" position="attributes">
                    <attribute name="groups">linkloving_warehouse.group_stock_control_manager</attribute>
                </xpath>

            </field>
        </record>


        <menuitem action="stock.action_inventory_form" id="stock.menu_action_inventory_form"
                  parent="stock.menu_stock_inventory_control" groups="" sequence="30"/>


    </data>
</openerp>


