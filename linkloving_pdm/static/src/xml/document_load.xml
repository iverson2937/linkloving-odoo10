<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="document_load_page">
        <div class="document_page_container">

        </div>
    </t>

    <t t-name="document_load_detail">
        <ul id="document_tab" class="nav nav-tabs">
            <t t-set="i" t-value="1"/>
            <t t-foreach="result" t-as="item">
                <li t-att-class="i ==1 ? 'active': ''">
                    <a t-att-href="'#'+item.type" data-toggle="tab" class="tab_toggle_a" t-att-data="item.type">
                         <t t-esc="item.name"/>
                    </a>
                </li>
                <t t-set="i" t-value="2"/>
            </t>
        </ul>
        <div class="create_document">
            <button class="btn btn-primary create_document_btn">创建</button>
        </div>

        <div id="myTabContent" class="tab-content">
            <t t-set="j" t-value="1"/>
            <t t-foreach="result" t-as="item">
                <div t-att-class="j==1?'tab-pane fade in active':'tab-pane fade'" t-att-id="item.type">
                    <t t-if="item.files">
                        <t t-foreach="item.files" t-as="item_files">
                            <div class="tab_pane_display">
                                <div class="tab_message_display">
                                    <div>文件名：<span><t t-esc="item_files.file_name"/></span></div>
                                    <div>审核人：<span><t t-esc="item_files.review_id"/></span></div>
                                    <div>远程地址：<span><t t-esc="item_files.remote_path"/></span></div>
                                    <div>版本：<span><t t-esc="item_files.version"/></span></div>
                                    <div>状态：<span><t t-esc="item_files.state"/></span></div>
                                </div>
                                <div class="document_review_list">
                                    <t t-foreach="item_files.review_line" t-as="review_list">
                                        <div><t t-esc="review_list.name"/></div>
                                        <t t-if="review_list.state=='review_success'">
                                            <span class="fa fa-long-arrow-right"></span>
                                        </t>
                                        <t t-if="review_list.state=='waiting_review'">
                                            <span class="fa fa-long-arrow-right document_yellow"></span>
                                            <div>等待</div>
                                        </t>
                                    </t>

                                </div>
                                <div class="document_btns">
                                    <t t-if="item_files.has_right_to_review == true">
                                        <button class="btn btn-primary document_manage_btn" t-att-data-id="item_files.id">审核操作</button>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </t>

                </div>
                <t t-set="j" t-value="2"/>
            </t>

        </div>
    </t>

    <t t-name="active_document_tab">
        <t t-foreach="result.files" t-as="item_files">
            <div class="tab_pane_display">
                <div class="tab_message_display">
                    <div>文件名：<span><t t-esc="item_files.file_name"/></span></div>
                    <div>审核人：<span><t t-esc="item_files.review_id"/></span></div>
                    <div>远程地址：<span><t t-esc="item_files.remote_path"/></span></div>
                    <div>版本：<span><t t-esc="item_files.version"/></span></div>
                    <div>状态：<span><t t-esc="item_files.state"/></span></div>
                </div>
                 <div class="document_review_list">
                    <t t-foreach="item_files.review_line" t-as="review_list">
                        <div><t t-esc="review_list.name"/></div>
                        <t t-if="review_list.state=='review_success'">
                            <span class="fa fa-long-arrow-right"></span>
                        </t>
                        <t t-if="review_list.state=='waiting_review'">
                            <span class="fa fa-long-arrow-right document_yellow"></span>
                            <div>等待</div>
                        </t>
                    </t>

                 </div>
                <div class="document_btns">
                    <!--<t t-if="item_files.has_right_to_review == true">-->
                        <button class="btn btn-primary document_manage_btn" t-att-data-id="item_files.id">审核操作</button>
                    <!--</t>-->
                </div>
            </div>
        </t>
    </t>
</templates>