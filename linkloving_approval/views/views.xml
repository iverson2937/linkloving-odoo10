<openerp>
    <data>

        <record id="view_stock_config_settings" model="ir.ui.view">
            <field name="name">文件服务器设置</field>
            <field name="model">pdm.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Warehouse" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    <group>
                        <group string="文件服务器设置">
                            <field name="pdm_intranet_ip"/>
                            <field name="pdm_external_ip"/>
                            <field name="pdm_port"/>
                            <field name="op_path"/>
                            <field name="pdm_account"/>
                            <field name="pdm_pwd"/>
                        </group>

                    </group>

                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="pdm_config_setting_action">
            <field name="name">文件服务器设置</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pdm.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
         <menuitem id="ll_approval_root" name="工程" sequence="9"/>
        <menuitem id="approval_setting" name="设置" parent="ll_approval_root" sequence="99"/>

        <menuitem id="pdm_config_setting_menu"
                  parent="linkloving_approval.approval_setting"
                  action="pdm_config_setting_action"
                  sequence="50"/>

        <template id="approval" name="linkloving_approval" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/linkloving_approval/static/src/js/approval.js"/>
                <script type="text/javascript" src="/linkloving_approval/static/src/js/approval_bom.js"/>

                <link rel="stylesheet" href="/linkloving_approval/static/src/css/approval.css"/>
                <link rel="stylesheet" href="/linkloving_approval/static/src/css/timeline.css"/>
            </xpath>
        </template>

        <record model="ir.actions.client" id="show_pdm_approval_action">
            <field name="name">linkloving_mrp_automatic_plan window</field>
            <field name="tag">approval_core</field>
        </record>

        <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->


        <!-- This Menu Item Must have a parent -->
        <menuitem id="approval_pdm_cate" name="文件" parent="ll_approval_root" sequence="0"/>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="approval_pdm" name="我的审核" parent="approval_pdm_cate" action="show_pdm_approval_action"
                  sequence="0"/>
    </data>
</openerp>