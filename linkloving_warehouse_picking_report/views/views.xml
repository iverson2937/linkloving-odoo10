<openerp>
    <data>
        <record id="picking_report_wizard_form" model="ir.ui.view">
            <field name="name">picking.report.wizard.form</field>
            <field name="model">picking.report.wizard</field>
            <field name="arch" type="xml">
                <form string="报表筛选">
                    <sheet>
                        <group>
                            <group>
                                <field name="start_time" require="1"/>
                                <field name="sale_team_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="end_time" require="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_do_report" string="查看报表" type="object" default_focus="1"
                                class="oe_highlight"/>
                        or
                        <button string="取消" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="stock_picking_form_inherit" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="delivery.view_picking_withcarrier_out_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='tracking']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="report_remark"/>
                </xpath>

            </field>
        </record>
        <!-- This Menu Item Must have a parent -->
        <record model="ir.actions.act_window" id="action_picking_report_wazird">
            <field name="name">仓库发货日报表</field>
            <field name="res_model">picking.report.wizard</field>
            <!--<field name="context">{'search_default_stockable':1}</field>-->
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!--<field name="help">Display the latest Inventories and Moves done on your products and easily sort them with specific filtering criteria. If you do frequent and partial inventories, you need this report in order to ensure that the stock of each product is controlled at least once a year. This also lets you find out which products have seen little move lately and may deserve special measures (discounted sale, quality control...)</field>-->
        </record>

        <menuitem parent="stock.menu_warehouse_report" action="action_picking_report_wazird"
                  id="menu_picking_report_wazird" sequence="2"/>
    </data>
</openerp>