<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- INHERITED FORM -->
        <record id="stock_config_settings_inherit" model="ir.ui.view">
            <field name="name">stock.config.settings.form</field>
            <field name="model">stock.config.settings</field>
            <field name="inherit_id" ref="stock.view_stock_config_settings"/>
            <field name="arch" type="xml">


                <xpath expr="//group" position="after">

                    <group string="审核设置">
                        <group>
                            <field name="raw_material_approve_id" options="{'no_create':True}"/>
                            <field name="finished_material_approve_id" options="{'no_create':True}"/>
                        </group>
                    </group>

                    <group string="库存盘亏盘盈科目">
                        <group>
                            <field name="stock_adjust_account_id" options="{'no_create':True}"/>
                        </group>
                    </group>

                </xpath>


            </field>
        </record>


    </data>
</openerp>










