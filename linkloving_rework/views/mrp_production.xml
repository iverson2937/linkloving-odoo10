<openerp>
    <data>


        <record id="mrp_production_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.production.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='bom_id']" position="attributes">
                    <attribute name="attrs">{'required':[('is_rework','=',False)]}</attribute>
                    <attribute name="required">0</attribute>
                </xpath>
                <xpath expr="//field[@name='product_qty']" position="after">
                    <field name="is_rework" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[1]" position="before">
                    <page string="需求物料" attrs="{'invisible': [('is_rework', '!=', True)]}">
                        <field name="rework_material_line_ids">

                            <tree editable="bottom">
                                <field name="product_id" string="产品" domain="[]" options="{'no_create':True}"/>
                                <field name="product_uom_id" string="单位"/>
                                <field name="product_qty" string="数量" invisible="0"/>
                            </tree>
                        </field>
                    </page>

                </xpath>

            </field>
        </record>
    </data>
</openerp>