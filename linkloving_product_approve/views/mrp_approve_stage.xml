<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="mrp_approve_stage_view_form" model="ir.ui.view">
        <field name="name">mrp.approve.view.form</field>
        <field name="model">mrp.approve.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" string="名称"/>
                            <field name="type_id" options="{'no_create':True}" string="类型"/>

                        </group>
                        <group>
                            <field name="pre_stage_id" string="上一个阶段"/>
                            <field name="allow_apply_change" string="是否为终审"/>
                            <field name="next_stage_id" string="下一阶段"
                                   attrs="{'invisible':[('allow_apply_change','=',True)],'required':[('allow_apply_change','!=',True)]}"/>
                        </group>
                    </group>
                    <h2>审核流程</h2>
                    <field name="approval_template_ids" string="审核流程">
                        <tree editable="bottom">
                            <field name="sequence" widget="handle"/>
                            <field name="name" placeholder="类型" string="名称"/>
                            <field name="user_ids" widget="many2many_tags" string="可选用户"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>


    <record id="mrp_approve_type_form" model="ir.ui.view">
        <field name="name">mrp.approve.view.form</field>
        <field name="model">mrp.approve.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="approve_type"/>
                            <field name="description"/>
                        </group>
                        <field name="required_user_ids" invisible="1"/>
                        <field name="stage_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_mrp_approve_type" model="ir.actions.act_window">
        <field name="name">审核类型</field>
        <field name="res_model">mrp.approve.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                请自定义审核流程
            </p>
        </field>
    </record>
    <record id="action_mrp_approve_stage" model="ir.actions.act_window">
        <field name="name">审核流程</field>
        <field name="res_model">mrp.approve.stage</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p>
                请自定义审核流程
            </p>
        </field>
    </record>


    <menuitem id="menu_mrp_approve_type_setting"
              parent="linkloving_approval.approval_setting"
              action="action_mrp_approve_type"
              sequence="2"/>

    <menuitem id="menu_mrp_approve_stage_setting"
              parent="linkloving_approval.approval_setting"
              action="action_mrp_approve_stage"
              sequence="2"/>


</odoo>
