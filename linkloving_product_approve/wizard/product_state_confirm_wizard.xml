<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="product_state_confirm_wizard_form" model="ir.ui.view">
        <field name="name">product.state.confirm.wizard.form</field>
        <field name="model">product.state.confirm.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="reject" invisble="1"/>
                    <field name="submit" invisble="1"/>
                    <field name="approve" invisble="1"/>
                    <group>
                        <field name="remark" attrs="{'required':[('reject','=',True)]}"/>
                    </group>


                    <footer>
                        <button name="confirm_submit" string="确定oubmit" type="object"
                                attrs="{'invisible':[('submit','!=',True)]}" class="oe_highlight"/>
                        <button name="confirm_approve" string="确定approve" type="object"
                                attrs="{'invisible':[('approve','!=',True)]}" class="oe_highlight"/>
                        <button name="confirm_reject" string="确定reject" type="object" class="oe_highlight"
                                attrs="{'invisible':[('reject','!=',True)]}"/>
                        <button string="_Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>