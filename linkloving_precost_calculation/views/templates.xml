<openerp>
    <data>
        <template id="core_static" name="linkloving_precost_calculation_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">

                <script type="text/javascript" src="/linkloving_precost_calculation/static/src/js/product_cost.js"/>

            </xpath>
        </template>

        <record id="view_product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button ol_button" name="cost_detail" icon="fa-tasks" string="成本明细"
                            type="object"/>
                </xpath>

            </field>
        </record>


    </data>
</openerp>