<odoo>
    <data>


        <record id="mrp_bom_form_view_inherit" model="ir.ui.view">
            <field name="name">mrp.bom.inherit.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="action_" type="object" states="draft" string="提交"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,post,done" readonly="1"/>
                    </header>
                </xpath>

            </field>
        </record>


        <menuitem id="menu_engineer_root" name="工程" sequence="5"/>


        <record id="action_mrp_bom_done" model="ir.actions.act_window">
            <field name="name">物料清单</field>
            <field name="res_model">mrp.bom</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','done')]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="mrp.view_mrp_bom_filter"/>
            <field name="help">你没有物料清单.</field>
        </record>
        <record id="action_mrp_bom_draft" model="ir.actions.act_window">
            <field name="name">物料清单</field>
            <field name="res_model">mrp.bom</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','draft')]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="mrp.view_mrp_bom_filter"/>
            <field name="help">你没有物料清单.</field>
        </record>


        <menuitem id="menu_mrp_bom" name="物料清单" parent="menu_engineer_root"/>
        <menuitem id="menu_mrp_bom_draft" name="草稿" parent="menu_mrp_bom" action="action_mrp_bom_draft"/>
        <menuitem id="menu_mrp_bom_done" name="物料清单" parent="menu_mrp_bom" action="action_mrp_bom_done"/>

    </data>
</odoo>