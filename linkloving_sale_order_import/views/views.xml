<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="import_sale_order_setting_form">
            <field name="name">淘宝</field>
            <field name="model">import.sale.order.setting</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Backups">
                    <header>
                        <button name="start" string="测试按钮" type="object" class="btn-primary"/>
                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name="username"/>
                                <field name="password"/>

                            </group>

                            <group>
                                <field name="login_url"/>
                                <field name="common_url"/>
                            </group>

                        </group>


                    </sheet>


                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="import_sale_order_setting_tree">
            <field name="name">淘宝</field>
            <field name="model">import.sale.order.setting</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Backups">
                    <field name="username"/>
                    <field name="login_url"/>
                    <field name="common_url"/>

                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_tb_sale_order">
            <field name="name">淘宝</field>
            <field name="res_model">import.sale.order.setting</field>
            <field name="view_type">form</field>
            <field name='view_mode'>tree,form</field>
        </record>

        <menuitem id="import_taobao_sale_order" name="电商订单导入" parent="base.menu_custom"/>
        <menuitem parent="import_taobao_sale_order" action="action_tb_sale_order" id="tb_sale_order"/>
    </data>
</openerp>