<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="retail_order_import_form" model="ir.ui.view">
            <field name="name">电商散单</field>
            <field name="model">retail.order</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="total_amount"/>
                    <field name="shipping_date"/>
                    <field name="create_date"/>
                </tree>
            </field>

        </record>


        <record id="retail_order_import_form" model="ir.ui.view">
            <field name="name">电商散单</field>
            <field name="model">retail.order</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" require="1"/>
                                <field name="partner_id" string="店名" options="{'no_create':True}"/>
                            </group>
                            <group>
                                <field name="create_date"/>
                                <field name="shipping_date"/>
                                <field name="total_amount"/>
                            </group>
                        </group>

                        <notebook>
                            <page>
                                <field name="order_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create':True}"/>
                                        <field name="qty"/>
                                        <field name="price_unit"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                </form>

            </field>
        </record>

    </data>
</openerp>