        <record model="ir.ui.view" id="ljwj_core.order_install_wizard_form_view">
            <field name="name">ljwj.sale.order.line.install.wizard.form</field>
            <field name="model">ljwj.sale.order.line.install.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                        <group string="工匠筛选">
                            <field name="worker_type"/>
                            <field name="confirm_worker" string="工匠" domain="[('is_worker','=',True),('real_status','=','validated')]"
                                   options="{'no_create': True, 'no_open': True}"/>
                        </group>
                        <group string="甲方筛选">
                            <field name="business_id" options="{'no_create': True, 'no_open': True}" domain="[('is_order_source','=',True)]"/>
                        </group>
                        </group>
                        <group>
                        <group string="任务筛选">
                                <field name="product_category" string="产品类别" options="{'no_create': True, 'no_open': True}"/>
                                <field name="task_category" string="任务类别"/>
                                <field name="task_type" string="任务类型"/>
                                <field name="state" string="结算状态" widget="radio"/>
                            </group>
                        <group string="按验收时间筛选">
                            <field name="range" string="时间范围" widget="radio"/>
                            <field name="start_date" string="开始日期"/>
                            <field name="end_date" string="截止日期"/>
                        </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="confirm_filter" type="object" string="确定" class="btn-primary" />
                        <button special="cancel" string="取消"/>
                    </footer>
                </form>
            </field>
        </record>

