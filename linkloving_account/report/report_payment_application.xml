<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="report_payment_application">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.internal_layout">
                        <div class="page">
                            <div class="oe_structure"/>


                            <h2 class="text-center">付款申请单</h2>

                            <h2> <p t-field="o.name"/></h2>

                            <div class="row mt32 mb32">
                                <div class="col-xs-2">
                                    <strong>公司全称:</strong>
                                    <p t-field="o.partner_id.name"/>
                                </div>
                                   <div class="col-xs-2">
                                    <strong>申请日期:</strong>
                                    <p t-field="o.receive_date"/>
                                </div>

                                <!--<div class="col-xs-3">-->
                                    <!--<strong>金额:</strong>-->
                                    <!--<p t-field="o.amount"/>-->

                                <!--</div>-->

                                <div class="col-xs-12">
                                    <strong>备注:</strong>
                                    <p t-field="o.remark"/>

                                </div>
                            </div>
                            <strong>对账付款明细:</strong>
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>对账日期</th>
                                        <th class="text-center">对账单号</th>
                                        <th class="text-center">订单号</th>
                                        <th class="text-center">金额</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.invoice_ids" t-as="invoice">
                                        <td t-if="invoice.date_invoice">
                                            <p t-field="invoice.date_invoice"/>

                                        </td>
                                        <td t-if="invoice.number" class="text-center">
                                            <p t-field="invoice.number"/>

                                        </td>
                                           <td t-if="invoice.origin" class="text-center">
                                            <p t-field="invoice.origin"/>
                                        </td>
                                        <td t-if="invoice.amount_total" class="text-center">
                                            <p t-field="invoice.amount_total"/>
                                        </td>


                                    </tr>
                                </tbody>
                            </table>

                            <div class="row">
                                <div class="col-xs-6">

                                </div>
                                <div class="col-xs-2">

                                    <strong t-esc="in_amount"></strong>
                                </div>

                                <div class="col-xs-2">
                                    <strong t-esc="out_amount"></strong>
                                </div>
                                <div class="col-xs-2 pull-right">
                                    <table class="table table-condensed">
                                        <tr class="border-black">
                                            <td>
                                                <strong>总额:</strong>
                                            </td>
                                            <td class="text-right">
                                                <strong t-esc="o.amount"></strong>

                                            </td>
                                        </tr>
                                        <tr>

                                        </tr>
                                    </table>
                                </div>
                            </div>

                            <div class="col-xs-3">
                                <strong>总经理:</strong>
                            </div>
                            <div class="col-xs-3">
                                <strong>财务:</strong>
                            </div>
                            <div class="col-xs-3">
                                <strong>部门主管:</strong>
                            </div>
                            <div class="col-xs-3">
                                <strong>制单人:</strong>
                               <p t-field="o.create_uid.name"/>
                            </div>

                            <div class="oe_structure"/>
                        </div>
            </t>
                </t>
            </t>
        </template>
    </data>
</openerp>
