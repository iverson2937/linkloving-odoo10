        <record id="action_view_supplier_account_invoice" model="ir.actions.act_window">
            <field name="name">供应商对账明细</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="domain">[('partner_id','=',context.get('partner_id'))]</field>
            <field name="context">{}</field>
        </record>

        <record id="purchase_account_payment_register_form" model="ir.ui.view">
            <field name="name">account.payment.register.form</field>
            <field name="model">account.payment.register</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="apply" string="提交" type="object" states="draft"
                                class="oe_highlight" groups="purchase.group_purchase_user"/>
                        <button name="confirm" string="确认" type="object" states="posted"
                                class="oe_highlight" groups="purchase.group_purchase_user"/>
                        <button name="reject" string="退回" type="object" states="apply"
                                class="oe_highlight" groups="account.group_account_invoice"/>
                        <button name="set_to_apply" string="重置" type="object"
                                class="oe_highlight" groups="base.group_erp_manager"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h1>
                            <label string="付款申请"></label>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>


                        <div class="oe_right oe_button_box" name="buttons">
                            <button type="action" name="%(action_view_supplier_account_invoice)d" class="oe_stat_button"
                                    icon="fa-dollar" string="对账明细" context="{'partner_id':partner_id}">
                            </button>

                        </div>
                        <group>
                            <group>
                                <!--<field name="po_id" string="PO" attrs="{'readonly':[('state','!=','draft')]}"/>-->
                                <field name="partner_id" string="供应商" domain="[('supplier','=',True)]" required="1"
                                />
                                <field name="bank_id" domain="[('partner_id', '=', partner_id)]" required="1"/>
                                <field name="amount" string="金额" required="1"
                                       attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="invoice_ids" domain="[('partner_id','=',partner_id),('state','=','open')]"/>
                                <!--<field name="tax_id"-->
                                       <!--domain="[('parent_id','=',False),('type_tax_use','&lt;&gt;','purchase')]"/>-->
                                <field name="description" string="描述"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="purchase_pre_payment_tree" model="ir.ui.view">
            <field name="name">account.payment.register.tree</field>
            <field name="model">account.payment.register</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="amount"/>
                    <field name="partner_id"/>
                    <field name="create_uid"/>
                    <field name="create_date"/>
                    <field name="description"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>






        <record id="action_payment_register" model="ir.actions.act_window">
            <field name="name">付款申请</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.payment.register</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add a contact in your address book.
                </p>
                <p>
                    No Invoice need to Prepayment!
                </p>
            </field>
        </record>
             <record id="action_payment_received_register" model="ir.actions.act_window">
            <field name="name">收款登记</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.receive.register</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    点击添加收款
                </p>
                <p>
                    没有收款记录!
                </p>
            </field>
        </record>
        <menuitem id="payment_register_apply" action="action_payment_register" parent="purchase.menu_purchase_control" sequence="5"/>
        <menuitem id="payment_received_register" action="action_payment_received_register" parent="account.menu_finance_receivables" sequence="5"/>

              <record id="view_account_payment_invoice_form" model="ir.ui.view">
			<field name="name">account.payment.invoice.form</field>
            <field name="model">account.payment</field>
			<field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
			<field name="arch" type="xml">


                <xpath expr="//field[@name='amount']" position="replace">
                    <field name="amount" readonly="1"/>
                </xpath>
			</field>
		</record>
