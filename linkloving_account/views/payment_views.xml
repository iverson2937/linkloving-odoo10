<openerp>
    <data>


        <record id="account_receive_register_form" model="ir.ui.view">
            <field name="name">account.receive.register.form</field>
            <field name="model">account.payment.register</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="post" string="提交" type="object"
                                class="oe_highlight" states="draft" groups="purchase.group_purchase_user"/>
                        <button name="reject" string="退回" type="object"
                                states="posted" groups="purchase.group_purchase_manager"/>
                        <button name="confirm" string="确认" type="object"
                                states="posted" groups="purchase.group_purchase_manager"/>
                        <button name="done" string="完成" type="object"
                                states="confirm" groups="purchase.group_purchase_manager"/>


                        <field name="state" widget="statusbar" statusbar_visible="draft,posted,confirm,done"/>
                    </header>
                    <sheet>
                        <h1>
                            <label string="收款"></label>
                            <field name="name" class="oe_inline" readonly="1"/>
                        </h1>
                        <group>
                            <field name="partner_id"
                                   attrs="{'required': [('state', '=', 'posted')],'readonly': [('state', '=', 'done')]}"
                                   domain="[('customer', '=', True),('is_company', '=', True)]"/>
                            <field name="amount" attrs="{'readonly':[('state','!=','draft')]}" required="1"/>
                            <field name="receive_date" required="1" attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="bank_id"
                                   attrs="{'readonly':[('state','!=','draft')],'readonly': [('state', '=', 'done')]}"
                                   context="{'default_partner_id':partner_id}">
                                <tree>
                                    <field name="acc_number"/>
                                    <field name="bank_id"/>
                                </tree>
                            </field>
                            <field name="account_id" string="收入账户" required="0" invisible="1"
                                   attrs="{'readonly': [('state', '=', 'done')]}"/>
                            <field name="remark" required="1" attrs="{'readonly': [('state', '=', 'done')]}"/>
                        </group>
                        <notebook colspan="4">
                            <page string="Invoices" autofocus="autofocus">
                                <group>
                                    <field name="invoice_ids"
                                           domain="[('partner_id','=', partner_id),('state','=', 'open'),('remain_apply_balance','!=',0 )]"/>
                                </group>

                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>


                </form>
            </field>
        </record>


