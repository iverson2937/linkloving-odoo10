<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="view_account_payment_tree_linkloving" model="ir.ui.view">
            <field name="name">account.payment.tree</field>
            <field name="model">account.payment</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="payment_date" string="收款日期"/>
                    <field name="name"/>
                    <field name="journal_id"/>
                    <field name="payment_method_id"/>
                    <field name="partner_id" string="客戶"/>
                    <field name="amount" sum="Amount"/>
                    <field name="state"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="partner_type"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>

        <record id="view_account_payment_invoice_form" model="ir.ui.view">
            <field name="name">account.payment.invoice.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_invoice_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='amount']" position="replace">
                    <field name="amount" readonly="1"/>
                </xpath>
            </field>
        </record>
        <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.form.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">


                <xpath expr="//field[@name='amount']" position="replace">
                    <field name="amount"/>
                </xpath>

                <xpath expr="//button[@name='post']" position="after">
                <button name="set_to_cancel" class="oe_highlight" string="取消" states="posted,sent,confirm"
                groups="account.group_account_user"
                type="object" confirm="确定取消这张收款单吗？"/>
                </xpath>
                <!--<xpath expr="//button[@name='post']" position="after">-->
                    <!--<button name="set_to_post" class="oe_highlight" string="设置"-->
                            <!--groups="base.group_erp_manager"-->
                            <!--type="object"/>-->
                <!--</xpath>-->

                <xpath expr="//field[@name='payment_type']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
                <xpath expr="//field[@name='payment_date']" position="replace">
                    <field name="payment_date"/>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="after">
                    <field name="product_id" options="{'no_create':True}"
                           string="产品"
                           domain="[('can_be_expensed', '=', True)]"
                           attrs="{'invisible':[('partner_type','!=','other')],'required':[('partner_type','=','other')]}"/>
                </xpath>
                <xpath expr="//field[@name='partner_type']" position="attributes">
                    <attribute name="attrs">{'readonly':[('state','=','done')]}</attribute>
                </xpath>


                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">posted,confirm,done,reconciled</attribute>
                </xpath>


                <xpath expr="//button[@name='post']" position="after">
                    <button name="set_to_done" class="oe_highlight" states="confirm" string="确认客户" type="object"/>
                </xpath>
                <xpath expr="//form/sheet/group" position="after">
                    <field name="remark" placeholder="备注"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" options="{'no_create':True}" nolabel="1"
                           domain="[('customer','=',context.get('is_customer')),('is_company','=',True)]"
                           attrs="{}"/>
                    <field name="customer" invisible="1"/>
                    <field name="team_id" readonly="1" string="Sale Team" attrs="{'invisible':[('customer','!=',True)]}"
                           options="{'no_create':True}"/>
                </xpath>


                <xpath expr="//sheet" position="after">
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}'/>
                    </div>
                </xpath>


            </field>
        </record>


        <record id="account.action_account_payments" model="ir.actions.act_window">
            <field name="name">Payments</field>
            <field name="res_model">account.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="context">{'default_payment_type': 'inbound','to_sales':True}</field>
            <field name="domain">[('partner_type', 'in', ['customer','other'])]</field>
            <field name="view_id" ref="account.view_account_payment_tree"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to register a payment
                </p>
                <p>
                    Payments are used to register liquidity movements (send, collect or transfer money).
                    You can then process those payments by your own means or by using installed facilities.
                </p>
            </field>
        </record>


        <record model="ir.ui.view" id="view_account_payment_search_inherit">
            <field name="name">stock.picking.search.inherit</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="amount" filter_domain="['|', ('name','ilike',self), ('communication','ilike',self)]"
                           string="编号"/>
                    <field name="amount" filter_domain="[('amount','=',self)]" string="金额"/>
                    <filter string="销售确认完成" domain="[('state','=','done')]" name="state_done"/>
                    <filter string="待销售确认" domain="[('state','=','confirm')]" name="state_confirm"/>
                </xpath>

            </field>
        </record>


        <record model="ir.ui.view" id="linkloving_account_account_payment_tree">
            <field name="name">linkloving.account.payment.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="remark"/>
                </xpath>

            </field>
        </record>


    </data>


</openerp>