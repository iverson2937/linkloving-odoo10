<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id='mrp_production_plan_wizard' model='ir.ui.view'>
            <field name='name'>mrp.production.plan.wizard</field>
            <field name='model'>mrp.production.plan.wizard</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form name='安排订单'>
                    <group>
                        <group>
                            <field name='date_planned_start' required='1'/>
                            <field name='date_planned_finished' required='1'/>
                        </group>
                        <group>
                            <field name="partner_id" string="工序负责人"/>
                            <field name="is_set_start" string="确认生产,准备领料"/>
                        </group>
                    </group>

                    <footer>
                        <button name='action_mo_plan' type='object' string='确认' class='oe_highlight'/>
                        or
                        <button string='取消' class='oe_link' special='cancel'/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_mrp_production_plan"
                    multi="True"
                    key2="client_action_multi" name="批量安排生产"
                    res_model="mrp.production.plan.wizard" src_model="mrp.production"
                    view_mode="form" target="new" view_type="form"/>

    </data>
</openerp>