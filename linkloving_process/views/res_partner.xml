<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='supplier']" position="before">
                     <field name="is_out_supplier"/>
                </xpath>


            </field>
        </record>
        <record id='action_suppliers' model='ir.actions.act_window'>
            <field name="name">委外加工商</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_is_out_supplier':True,'default_supplier':True,'default_company':True}</field>
            <field name="domain">[('is_out_supplier','=',True)]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to create a new landed cost.
                </p>
            </field>
        </record>

        <menuitem id="menu_supplier_config" name="委外加工商" parent="mrp.menu_mrp_configuration" sequence="31"
                  action="action_suppliers"/>


    </data>
</openerp>