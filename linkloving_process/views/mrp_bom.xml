<odoo>
    <data>
        <record id="mrp_bom_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_tmpl_id']" position="after">
                    <field name="process_id" options="{'no_create':True}" string="工序"/>
                    <field name="cycle_time" class="o_address_zip" placeholder="秒"/>
                    <field name="hour_price"/>
                    <field name="cost"/>
                    <!--<field name="unit_price" attrs="{'invisible':[('mo_type', '==', 'time')]}"/>-->
                </xpath>
                     <xpath expr="//field[@name='type']" position="after">
                    <field name="mo_type" widget="radio" string="计价类型"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>