<odoo>
    <data>
        <record id="mrp_bom_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="bom_structure_view" type="object"
                            icon="fa-tasks" string="BOM结构">
                    </button>

                </div>
                <xpath expr="//field[@name='product_tmpl_id']" position="after">
                    <field name="process_id" options="{'no_create':True}"/>
                    <field name="unit_price" attrs="{'invisible':[('mo_type', '==', 'time')]}"/>
                </xpath>
                <!--暂时性隐藏-->
                <xpath expr="//field[@name='type']" position="after">
                    <field name="mo_type" widget="radio" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[1]" position="after">
                    <page string="理论成本">
                        <group colspan="4">
                            <group>
                                <label for="cycle_time"/>
                                <div class="o_row">
                                    <field name="cycle_time"/>
                                    <field name="cycle_time_time_unit" options="{'no_open':True,'no_create':True}"/>
                                </div>
                                <field name="produced_spend_per_pcs"/>
                                <field name="prepare_time"/>
                            </group>
                            <group>
                                <!--<field name="hour_price"/>-->
                                <field name="cost"/>
                            </group>

                        </group>

                    </page>
                </xpath>
            </field>
        </record>

        <record id="mrp_bom_tree_view" model="ir.ui.view">
            <field name="name">mrp.bom.tree</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='code']" position="before">
                    <field name="process_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_mrp_bom_filter_ll" model="ir.ui.view">
            <field name="name">mrp.production.filter</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="process_id" string="Process" filter_domain="[('process_id.name','ilike',self)]"/>
                </xpath>

            </field>
        </record>

        <record id="mrp_bom_line_tree_view_inherit" model="ir.ui.view">
            <field name="name">mrp.bom.tree.inherit</field>
            <field name="model">mrp.bom.line</field>
            <field name="inherit_id" ref="mrp.mrp_bom_line_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="process_id" string="工序"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>