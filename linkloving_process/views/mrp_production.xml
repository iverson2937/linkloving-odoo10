<odoo>
    <data>
        <record id="mrp_production_form_view_ll" model="ir.ui.view">
            <field name="name">mrp.production.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="replace">
                    <button name="action_cancel" states="draft,sent,sale" type="object" string="取消订单"
                            confirm="确定制造订单吗？"/>
                </xpath>
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="action_view_mrp_productions"
                            type="object" icon="fa-list-alt">
                        <field name="mo_count" string="MO count" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" name="action_view_mrp_invoice"
                            attrs="{'invisible': [('mo_invoice_count', '=', 0)]}"
                            type="object" icon="fa-list-alt">

                        <field name="mo_invoice_count" string="对账单" widget="statinfo"/>
                    </button>
                </div>
                <xpath expr="//field[@name='bom_id']" position="after">
                    <field name="process_id" options="{'no_create':True}" string="Process" required="1"/>
                </xpath>
                <xpath expr="//field[@name='origin']" position="after">

                    <field name="mo_type" widget="radio" string="Type"/>
                    <field name="unit_price" string="单价/委外加工单价"
                           attrs="{'invisible':[('mo_type', '==', 'time')],'readonly':[('state', '!=', 'confirmed')]}"
                    />
                    <field name="hour_price"
                           attrs="{'invisible':[('mo_type', '==', 'unit')],'readonly':[('state', '!=', 'confirmed')]}"
                    />
                </xpath>

                <xpath expr="//field[@name='date_planned_start']" position="attributes">
                    <attribute name="string">交期</attribute>
                </xpath>
                <xpath expr="//field[@name='bom_id']" position="after">
                    <field name="is_outside" invisible="1"/>
                    <field name="supplier_id"
                           attrs="{'invisible': [('is_outside', '=', False)],'required':[('is_outside','=',True)]}"
                           string="委外供应商"
                           options="{'no_create': True}"/>
                    <field name="tracking_number" attrs="{'invisible': [('tracking_number', '=', False)]}"/>

                </xpath>
                <xpath expr="//field[@name='user_id']" position="replace">
                    <field name="in_charge_id" domain="[('is_in_charge','=',True)]" options="{'no_create':True}"/>
                </xpath>
            </field>
        </record>

        <record id="mrp_production_tree_view_ll" model="ir.ui.view">
            <field name="name">mrp.production.tree</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_qty']" position="replace">
                    <field name="product_qty" sum="Total Qty" string="安排数量"/>
                    <field name="qty_produced" sum="Total Qty" string="产出数量"/>
                </xpath>
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="process_id"/>
                    <field name="in_charge_id"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" string="Status"/>
                </xpath>

                <xpath expr="//field[@name='date_planned_start']" position="attributes">
                    <attribute name="string">交期</attribute>
                </xpath>

            </field>
        </record>

        <record id="view_mrp_production_filter_ll" model="ir.ui.view">
            <field name="name">mrp.production.filter</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="origin" string="原订单号" filter_domain="[('origin','ilike',self)]"/>
                    <field name="process_id" string="Process" filter_domain="[('process_id.name','ilike',self)]"/>
                </xpath>
                <xpath expr="//group/filter[2]" position="replace">
                    <filter string="工序" domain="[]" context="{'group_by':'process_id'}"/>
                </xpath>

            </field>
        </record>

        <record id="action_mrp_production_tree_to_confirm" model="ir.actions.act_window">
            <field name="name">To Do</field>
            <field name="res_model">mrp.production</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{
                'search_default_process_id': active_id,
                }
            </field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new transfer.
                </p>
                <p>
                    You can either do it immediately or mark it as Todo for future processing. Use your scanner to
                    validate the transferred quantity quicker.
                </p>
            </field>
        </record>


        <!-- Process Dashboard Views -->
        <record id="action_create_mrp_production_form" model="ir.actions.act_window">
            <field name="name">新建制造单</field>
            <field name="res_model">mrp.production</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="context">{
                'search_default_process_id': [active_id],
                'default_process_id': active_id,
                'default_user_id': uid,
                }
            </field>
        </record>


        <record id="get_action_mrp_production_tree_to_combine" model="ir.actions.act_window">
            <field name="name">To Do</field>
            <field name="res_model">mrp.production</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','in',['draft','confirmed','waiting_material'])]</field>
            <field name="context">{
                'search_default_process_id': active_id,
                'group_by':'product_id',
                }
            </field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to create a new transfer.
                </p>
                <p>
                    You can either do it immediately or mark it as Todo for future processing. Use your scanner to
                    validate the transferred quantity quicker.
                </p>
            </field>
        </record>


    </data>
</odoo>