<odoo>
    <data>
        <record id="view_product_category_tree" model="ir.ui.view">
            <field name="name">account.account.tree</field>
            <field name="model">product.category</field>
            <field name="field_parent">child_id</field>
            <field name="arch" type="xml">
                <tree string="类别" toolbar="1">
                    <field name="name"/>

                </tree>
            </field>
        </record>

        <record id="mrp_bom_line_action_from_bom" model="ir.actions.act_window">
            <field name="name">产品分类</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.category</field>
            <field name="domain">[]</field>
            <field name="view_type">tree</field>
            <field name="view_id" ref="view_product_category_tree"/>
            <field name="view_type">tree</field>
        </record>


        <menuitem id="menu_product_config" name="产品分类" sequence="30" groups="base.group_no_one"/>
        <menuitem id="test" action="mrp_bom_line_action_from_bom" parent="menu_product_config"
                  groups="base.group_no_one"/>
    </data>
</odoo>





