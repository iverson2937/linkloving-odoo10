<odoo>
    <data>


        <record id="view_order_form_with_carrier" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='payment_term_id']" position="after">
                        <field name="id" invisible="1"/>
                        <label for="adjust_id"/>
                        <div name='adjust_selection'>
                            <div>
                                <field name="adjust_id" class="oe_inline"
                                       options="{'no_create': True, 'no_open': True}"
                                       attrs="{'readonly':[('state','not in',('draft','post','validate'))]}"/>
                            </div>
                            <div>
                                <field name='adjust_price' widget='monetary' class="oe_inline"
                                       nolabel="1"
                                       attrs="{'invisible': [('adjust_id','=', False)]}"/>
                                <button name="adjust_set" string="确定" type="object"
                                        class="oe_inline fa fa-arrow-right oe_link"
                                        attrs="{'invisible':['|',('adjust_id','=',False),('state','not in',('draft','post','validate'))]}"/>
                            </div>
                        </div>
                    </xpath>

                </data>
            </field>
        </record>
    </data>
</odoo>












