<openerp>
    <data>
         <template id="mrp_automatic_plan" name="linkloving_mrp_automatic_plan" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/linkloving_mrp_automatic_plan/static/src/js/date.js"/>
                <script type="text/javascript" src="/linkloving_mrp_automatic_plan/static/src/js/almanac.js"/>
                <script type="text/javascript" src="/linkloving_mrp_automatic_plan/static/src/js/arrange_production.js"/>
                <script type="text/javascript"
                        src="/linkloving_mrp_automatic_plan/static/src/js/schedule_production_report.js"/>
                <script type="text/javascript" src="/linkloving_mrp_automatic_plan/static/src/js/statuslight.js"/>
                <link rel="stylesheet" href="/linkloving_mrp_automatic_plan/static/src/css/almanac.css"/>
                <link rel="stylesheet" href="/linkloving_mrp_automatic_plan/static/src/css/date.css"/>
                <link rel="stylesheet" href="/linkloving_mrp_automatic_plan/static/src/css/arrange_production.css"/>

                <!-- treetable-->
                <script type="text/javascript"
                        src="/linkloving_mrp_automatic_plan/static/src/js/treetable/jquery.treetable.js"/>

                <link rel="stylesheet"
                      href="/linkloving_mrp_automatic_plan/static/src/css/treetable/treetable.css"/>
                <link rel="stylesheet"
                      href="/linkloving_mrp_automatic_plan/static/src/css/treetable/jquery.treetable.theme.default.css"/>
                <link rel="stylesheet"
                      href="/linkloving_mrp_automatic_plan/static/src/css/treetable/screen.css"/>
                <!--end-->
            </xpath>
        </template>

        <record model="ir.actions.client" id="to_date_page_list_action">
              <field name="name">linkloving_mrp_automatic_plan window</field>
              <field name="tag">date_manage</field>
        </record>

        <menuitem id="employ_date"
                  name="日期"
                  parent="hr.menu_human_resources_configuration"
                  action="to_date_page_list_action"/>

        <record id="stock_picking_type_kanban2" model="ir.ui.view">
            <field name="name">mrp.process.kanban</field>
            <field name="model">mrp.process</field>
            <field name="inherit_id" ref="linkloving_process.stock_picking_type_kanban"/>
            <field name="arch" type="xml">
                <!-- find field description and add the field
                     idea_ids after it -->
                <xpath expr="//button[@name='mo_schedule_query']" position="after">
                    <button style="margin-left:15px" name="arrange_production" type="object"><field name="name"/>排产</button>
                </xpath>
            </field>
        </record>

        <record id="account_multi_handle_worker_form_view" model="ir.ui.view">
            <field name="name">procurement.order.reset.confirm.form</field>
            <field name="model">procurement.order.reset.confirm</field>
            <field name="arch" type="xml">
                <form string="批量再确认补货">
                    <p class="oe_grey">
                        是否将选中补货单重新确认补货？
                    </p>
                    <footer>
                        <button string="确定" name="action_ok" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="取消" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_multi_reset_confirm"
                    multi="True"
                    key2="client_action_multi" name="批量再确认补货"
                    res_model="procurement.order.reset.confirm" src_model="procurement.order"
                    view_mode="form" target="new" view_type="form"/>
    </data>
</openerp>