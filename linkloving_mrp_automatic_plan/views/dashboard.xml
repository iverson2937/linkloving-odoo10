        <record id="purchase_order_dashboard_kanban" model="ir.ui.view">
            <field name="name">auto.plan.kanban</field>
            <field name="model">auto.plan</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey o_kanban_dashboard o_stock_kanban" create="0">
                    <field name="type"/>
                    <field name="count_red"/>
                    <field name="count_green"/>
                    <field name="count_yellow"/>
                    <field name="count_qc"/>
                    <field name="count_confirm"/>
                    <field name="count_inventory"/>
                    <field name="count_waiting_file"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div name="stock_picking">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <a type="object" name="get_action_mrp_production_tree_to_confirm">
                                                <field name="name"/>
                                            </a>
                                        </div>
                                        <div class="o_secondary">
                                        </div>
                                    </div>
                                    <!--<div class="o_kanban_manage_button_section">-->
                                    <!--<a class="o_kanban_manage_toggle_button" href="#">More-->
                                    <!--<i class="fa fa-caret-down"/>-->
                                    <!--</a>-->
                                    <!--</div>-->
                                </div>
                                <div class="container o_kanban_card_content o_visible">
                                    <div class="row">
                                        <t t-set="type" t-value="record.type.value"/>
                                        <t t-if="type == 'status_light'">
                                            <div class="col-xs-6 col-md-6 o_kanban_primary_left">
                                                <button class="btn btn-primary"
                                                        name="refresh_po"
                                                        type="object">
                                                    <span>
                                                        重新计算状态
                                                    </span>
                                                </button>
                                            </div>
                                            <div class="col-md-6 col-xs-6 o_kanban_primary_right"
                                                 style="min-height:150px">
                                                <div class="row">
                                                    <div class="col-xs-9">
                                                        <a name="get_red_1"
                                                           type="object">
                                                            <i class="fa fa-circle" style="color:red"></i>
                                                        </a>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <field name="count_red"/>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-xs-9">
                                                        <a name="get_yellow"
                                                           type="object">
                                                            <i class="fa fa-circle" style="color:yellow"></i>
                                                        </a>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <field name="count_yellow"/>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-xs-9">
                                                        <a name="get_green"
                                                           type="object">
                                                            <i class="fa fa-circle" style="color:green"></i>
                                                        </a>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <field name="count_green"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                        <t t-if="type == 'stock_picking'">
                                            <div class="col-xs-6 col-md-6 o_kanban_primary_left">
                                                <button class="btn btn-primary"
                                                        name="get_stock_picking_purchase_confirm"
                                                        type="object">
                                                    <span>
                                                        <t t-esc="record.count_confirm.value"/>
                                                        采购确认
                                                    </span>
                                                </button>
                                            </div>

                                            <div class="col-md-6 col-xs-6 o_kanban_primary_right"
                                                 style="min-height:150px">
                                                <div class="row">
                                                    <div class="col-xs-9">
                                                        <a name="get_stock_picking_qc"
                                                           type="object">
                                                            品 检
                                                        </a>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <field name="count_qc"/>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-xs-9">
                                                        <a name="get_stock_picking_inventory"
                                                           type="object">
                                                            待 入 库
                                                        </a>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <field name="count_inventory"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                        <t t-if="type == 'waiting_file'">
                                            <div class="col-xs-4 col-md-4 o_kanban_primary_left">
                                                <button class="btn btn-primary"
                                                        name="get_waiting_file_po"
                                                        type="object">
                                                    <span>
                                                        <t t-esc="record.count_waiting_file.value"/>
                                                        等待文件
                                                    </span>
                                                </button>
                                            </div>
                                            <div class="col-md-6 col-xs-6 o_kanban_primary_right"
                                                 style="min-height:150px">
                                                <div class="row">
                                                    <div class="col-xs-9">
                                                        <a name="get_purchase_order_to_invoice"
                                                           type="object">
                                                            待对账销售单
                                                        </a>
                                                    </div>
                                                    <div class="col-xs-3">
                                                        <field name="count_qc"/>
                                                    </div>
                                                </div>
                                                <!--<div class="row">-->
                                                    <!--<div class="col-xs-9">-->
                                                        <!--<a name="get_stock_picking_inventory"-->
                                                           <!--type="object">-->
                                                            <!--待 入 库-->
                                                        <!--</a>-->
                                                    <!--</div>-->
                                                    <!--<div class="col-xs-3">-->
                                                        <!--<field name="count_inventory"/>-->
                                                    <!--</div>-->
                                                <!--</div>-->
                                            </div>

                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="auto_plan_kanban_action" model="ir.actions.act_window">
            <field name="name">采购单状态看板</field>
            <field name="res_model">auto.plan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,form</field>
            <field name="help" type="html">
                <p>
                </p>
            </field>
        </record>
        <menuitem
                action="auto_plan_kanban_action"
                id="auto_plan_kanban_menu"
                parent="purchase.menu_purchase_root" sequence="0"
                name="采购单状态看板"/>

    </data>
</openerp>