        <record id="view_hr_config_setting" model="ir.ui.view">
            <field name="name">设置</field>
            <field name="model">hr.config.settings</field>
            <field name="arch" type="xml">
                <form string="设置" class="oe_form_configuration">
                    <group>
                        <field name="is_available"></field>
                    </group>
                    <group string="工厂时间设置">
                        <field name="factory_work_start_time" widget="float_time"/>
                        <field name="factory_work_end_time" widget="float_time"/>
                        <field name="rework_spent_time" widget="float_time"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_hr_config_setting_tree" model="ir.ui.view">
            <field name="name">工厂作息设置</field>
            <field name="model">hr.config.settings</field>
            <field name="arch" type="xml">
                <tree string="作息设置">
                    <field name="factory_work_start_time" widget="float_time"/>
                    <field name="factory_work_end_time" widget="float_time"/>
                    <field name="rework_spent_time" widget="float_time"/>
                    <field name="is_available"></field>
                </tree>
            </field>
        </record>
