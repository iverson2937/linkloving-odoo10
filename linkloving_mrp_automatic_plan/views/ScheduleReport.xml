<openerp>
    <data>
        <record id="select_report_wizard_form" model="ir.ui.view">
            <field name="name">select.report.wizard.form</field>
            <field name="model">select.report.wizard</field>
            <field name="arch" type="xml">
                <form string="报表">
                    <sheet>
                        <group>
                            <field name="report_type"/>
                        </group>
                        <group>
                            <field name="product_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('report_type', '!=', 'from_product')]}"/>
                            <field name="so_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('report_type', '!=', 'from_so')]}"/>
                        </group>
                        <footer>
                            <button string="生成报表" name="action_create_report" type="object" default_focus="1"
                                    class="btn-primary"/>
                            <button string="取消" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>

                </form>
            </field>
        </record>


        <record id="mrp_report_form" model="ir.ui.view">
            <field name="name">mrp.report.form</field>
            <field name="model">mrp.report</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="report_start_time"/>
                            <field name="report_end_time"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="report_type"/>
                            <field name="total_orderpoint_count"/>
                            <field name="note"/>
                        </group>
                        <notebook>
                            <page string="报告条目">
                                <group>
                                    <field name="report_line_ids">
                                        <tree>
                                            <field name="product_id"/>
                                            <button name="show_product_detail" type="object" string="详细"/>
                                            <field name="production_id"/>
                                            <field name="order_qty"/>
                                            <field name="qty_available"/>
                                            <field name="virtual_available"/>
                                            <field name="orderpoint_id"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="mrp_report_tree" model="ir.ui.view">
            <field name="name">Report</field>
            <field name="model">mrp.report</field>
            <field name="arch" type="xml">
                <tree string="Report">
                    <field name="report_type"/>
                    <field name="report_start_time"/>
                    <field name="report_end_time"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="action_see_mrp_report" model="ir.actions.act_window">
            <field name="name">MRP运算报告</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <menuitem id="menuitem_mrp_report"
                  action="action_see_mrp_report"
                  name="MRP运算报告"
                  parent="mrp.menu_mrp_reporting"
                  sequence="1"
                  groups="base.group_user"/>
    </data>
</openerp>