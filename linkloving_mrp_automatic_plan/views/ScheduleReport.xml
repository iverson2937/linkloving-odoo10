<openerp>
    <data>
        <record id="select_report_wizard_form" model="ir.ui.view">
            <field name="name">select.report.wizard.form</field>
            <field name="model">select.report.wizard</field>
            <field name="arch" type="xml">
                <form string="报表">
                    <sheet>
                        <group>
                            <field name="report_type"/>
                        </group>
                        <group>
                            <field name="product_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('report_type', '!=', 'from_product')]}"/>
                            <field name="so_ids" widget="many2many_tags"
                                   attrs="{'invisible': [('report_type', '!=', 'from_so')]}"/>
                        </group>
                        <footer>
                            <button string="生成报表" name="action_create_report" type="object" default_focus="1"
                                    class="btn-primary"/>
                            <button string="取消" class="btn-default" special="cancel"/>
                        </footer>
                    </sheet>

                </form>
            </field>
        </record>
    </data>
</openerp>