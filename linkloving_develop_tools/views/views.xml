<openerp>
    <data>
        <record id="create_order_point_form" model="ir.ui.view">
            <field name="name">create.order.point.form</field>
            <field name="model">create.order.point</field>
            <field name="arch" type="xml">
                <form string="一键创建重订货规则">
                    <p class="oe_grey">
                        为国内产品创建重订货规则？
                    </p>
                    <footer>
                        <button string="确定创建" name="action_create_in_aboard_rule" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_create_order_point_form">
            <field name="name">Create Order Point</field>
            <field name="res_model">create.order.point</field>
            <field name="view_type">form</field>
            <field name='view_mode'>tree,form</field>
            <field name='view_id' ref='create_order_point_form'/>
        </record>
        <!-- This Menu Item Must have a parent -->
        <menuitem id="develop_operation_menu" name="测试使用工具" parent="base.menu_custom"/>
        <menuitem parent="develop_operation_menu" action="action_create_order_point_form"
                  id="one_key_create_order_point"/>

    </data>
</openerp>