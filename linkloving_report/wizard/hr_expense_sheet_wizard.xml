<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id='hr_expense_sheet_wizard_form' model='ir.ui.view'>
            <field name='name'>hr.expense.sheet.wizard.form</field>
            <field name='model'>hr.expense.sheet.wizard</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form name='Print Reports'>
                    <group>
                        <group>
                            <field name='start_date' required='1'/>
                            <field name='end_date' required='1'/>
                        </group>
                    </group>

                    <footer>
                        <button name='print_report' type='object' string='Export Excel Reports' class='oe_highlight'/>
                        or
                        <button string='Cancel' class='oe_link' special='cancel'/>
                    </footer>
                </form>
            </field>
        </record>
        <record id='action_hr_expense_sheet_wizard' model='ir.actions.act_window'>
            <field name='name'>HR Expense Sheet</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="context">{'default_income':1}</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>

            <field name='target'>new</field>
        </record>

        <record id='action_hr_expense_sheet_income_wizard' model='ir.actions.act_window'>
            <field name='name'>HR Expense Sheet</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>
            <field name='target'>new</field>
        </record>

        <record id='action_hr_expense_sheet_income_wizard' model='ir.actions.act_window'>
            <field name='name'>HR Expense Sheet</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="context">{'prepayment_outgoing':True}</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>
            <field name='target'>new</field>
        </record>


    </data>
</openerp>