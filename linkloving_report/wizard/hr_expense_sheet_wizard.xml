<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id='hr_expense_sheet_wizard_form' model='ir.ui.view'>
            <field name='name'>hr.expense.sheet.wizard.form</field>
            <field name='model'>hr.expense.sheet.wizard</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form name='Print Reports'>
                    <group>
                        <group>
                            <field name='start_date' required='1'/>
                            <field name='end_date' required='1'/>
                        </group>
                        <group>
                            <field name="employee_ids" options="{'no_create':True}" widget="many2many_tags"/>
                        </group>
                    </group>

                    <footer>
                        <button name='print_report' type='object' string='导出' class='oe_highlight'/>
                        or
                        <button string='取消' class='oe_link' special='cancel'/>
                    </footer>
                </form>
            </field>
        </record>
        <record id='action_hr_expense_sheet_wizard' model='ir.actions.act_window'>
            <field name='name'>报销单</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="context">{'expense':True}</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>

            <field name='target'>new</field>
        </record>
        <record id='action_account_payment_hr_expense_sheet_wizard' model='ir.actions.act_window'>
            <field name='name'>报销单</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="context">{'payment_sheet':True}</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>

            <field name='target'>new</field>
        </record>


        <record id='action_pre_payment_report_wizard' model='ir.actions.act_window'>
            <field name='name'>暂支支出</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="context">{'prepayment_outgoing':True}</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>
            <field name='target'>new</field>
        </record>

        <record id='action_pre_payment_deduct_report_wizard' model='ir.actions.act_window'>
            <field name='name'>暂支冲抵</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="context">{'prepayment_deduct':True}</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>
            <field name='target'>new</field>
        </record>

        <record id='action_purchase_payment_wizard' model='ir.actions.act_window'>
            <field name='name'>采购支出报告</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="context">{'purchase':True}</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>
            <field name='target'>new</field>
        </record>

        <record id='action_hr_expense_sheet_income_wizard' model='ir.actions.act_window'>
            <field name='name'>其他收入报告</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name="context">{'income':True}</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>
            <field name='target'>new</field>
        </record>
        <record id='action_income_payment_wizard' model='ir.actions.act_window'>
            <field name='name'>销售收入报告</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name="context">{'sale':True}</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>
            <field name='target'>new</field>
        </record>
        <record id='action_return_pre_payment_wizard' model='ir.actions.act_window'>
            <field name='name'>暂支还款</field>
            <field name='res_model'>hr.expense.sheet.wizard</field>
            <field name="context">{'return':True}</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name="view_id" ref="hr_expense_sheet_wizard_form"/>
            <field name='target'>new</field>
        </record>

    </data>
</openerp>