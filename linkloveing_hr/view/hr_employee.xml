<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_timesheet_employee_extd_form" model="ir.ui.view">
            <field name="name">hr.timesheet.employee.extd_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='public']/group/group[2]/field[@name='parent_id']"
                       position="replace">
                    <field name="parent_id" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='address_id']" position="after">
                    <field name="pre_payment_reminding" string="暂支余额"/>
                </xpath>
            </field>
        </record>

                <record id="account_multi_create_qrcode_form_view" model="ir.ui.view">
            <field name="name">multi.create.qrcode.form</field>
            <field name="model">multi.create.qrcode</field>
            <field name="arch" type="xml">
                <form string="Confirm Draft Invoices">
                    <p class="oe_grey">
                        确定批量生成选定的产品的二维码？
                    </p>
                    <footer>
                        <button string="确定生成" name="action_create_qrcode" type="object" default_focus="1"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_multi_create_qrcode"
                    multi="True"
                    key2="client_action_multi" name="批量生成二维码"
                    res_model="multi.choose.worker" src_model="hr.employee"
                    view_mode="form" target="new" view_type="form"/>


    </data>
</openerp>