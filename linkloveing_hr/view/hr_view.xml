        <record id="hr_timesheet_employee_extd_form" model="ir.ui.view">
            <field name="name">hr.timesheet.employee.extd_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook/page[@name='public']/group/group[2]/field[@name='parent_id']"
                       position="replace">
                    <field name="parent_id" options="{'no_create': True}"/>
                </xpath>
            </field>
        </record>

        <record id="linkloving_view_expenses_form" model="ir.ui.view">
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='employee_id']" position="after">
                    <field name="department_id"/>
                </xpath>

                <xpath expr="//button[@name='approve_expense_sheets']" position="replace">
                    <button name="manager1_approve" states="submit" string="主管审批" type="object"
                            groups="hr_expense.group_hr_expense_user" class="oe_highlight o_expense_sheet_approve"/>
                    <button name="manager2_approve" states="manager1_approve" string="经理审批" type="object"
                            groups="hr_expense.group_hr_expense_manager" class="oe_highlight o_expense_sheet_approve"/>
                    <button name="manager3_approve" states="manager2_approve" string="总经理审批" type="object"
                            groups="linkloving_hr.group_hr_expense_president"
                            class="oe_highlight o_expense_sheet_approve"/>
                </xpath>
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submit,manager1_approve,manager2_approve,approve,post,done"/>
                </xpath>


            </field>
        </record>


        <record id="linkloving_view_expenses_tree" model="ir.ui.view">
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="expense_no" string="报销编号"/>
                </xpath>
            </field>
        </record>


