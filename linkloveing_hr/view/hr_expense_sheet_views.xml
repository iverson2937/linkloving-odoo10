<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_expense.view_hr_expense_sheet_form" model="ir.ui.view">
            <field name="model">hr.expense.sheet</field>
            <field name="arch" type="xml">
                <form string="Expense Reports" class="o_expense_sheet">
                    <header>

                        <!--<button name="set_account_date" states="done" string="设置日期"-->
                        <!--type="object" groups="base.group_erp_manager"-->
                        <!--class="oe_highlight o_expense_sheet_post"/>-->

                        <button name="action_cancel" string="取消过账"
                                type="object" groups="account.group_account_manager"
                                states="post,done"
                                class="oe_highlight o_expense_sheet_post"/>
                        <button name="hr_expense_sheet_post" states="draft" string="提交审核"
                                type="object" groups="base.group_user"
                                class="oe_highlight o_expense_sheet_post"/>
                        <button name="to_do_journal_entry" states="approve" string="会计确认" type="object"
                                context="{'employee_id':employee_id}"
                                groups="account.group_account_user" class="oe_highlight o_expense_sheet_post"/>
                        <button name="register_payment_action" type="object"
                                string="登记付款" class="oe_highlight o_expense_sheet_pay"
                                attrs="{'invisible': [('state', '!=', 'post')]}"
                                context="{'default_amount': total_amount, 'partner_id': address_id}"
                                groups="account.group_account_user"/>
                        <button name="reset_expense_sheets" states="cancel" string="Resubmit" type="object"/>
                        <button name="manager1_approve" string="Approve" type="object"
                                groups="hr_expense.group_hr_expense_user" class="oe_highlight o_expense_sheet_approve"
                                attrs="{'invisible':['|',('is_show','=',False),('state','!=','submit')]}"
                        />
                        <button name="manager2_approve" string="Approve" type="object"
                                groups="hr_expense.group_hr_expense_user"
                                attrs="{'invisible':['|',('is_show','=',False),('state','!=','manager1_approve')]}"
                                class="oe_highlight o_expense_sheet_approve"/>
                        <button name="manager3_approve" string="Approve" type="object"
                                groups="hr_expense.group_hr_expense_manager"
                                attrs="{'invisible':['|',('is_show','=',False),('state','!=','manager2_approve')]}"
                                class="oe_highlight"/>
                        <button name="%(hr_expense.hr_expense_refuse_wizard_action)d"
                                states="draft,submit,manager1_approve,manager2_approve,manager3_approve,approve"
                                string="Refuse"
                                type="action" groups="base.group_user"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,submit,manager1_approve,manager2_approve,approve,post,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button name="action_get_attachment_view"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object">
                                <field name="attachment_number" widget="statinfo" string="Documents"/>
                            </button>
                            <button name="action_open_journal_entries"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    string="Accounting Entries"
                                    attrs="{'invisible': [('account_move_id', '=', False)]}"
                                    type="object">
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="expense_no" placeholder="e.g. Trip to NY" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>

                                <field name="department_id" required="1" options="{'no_create':True}"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="pre_payment_reminding"
                                       attrs="{'invisible': [('pre_payment_reminding', '=', False)]}"
                                       readonly="1"/>
                                <field name="employee_id" invisible="0" readonly="1"/>
                                <field name="is_show" invisible="1"/>
                                <field name="responsible_id" invisible="1"/>
                                <field name="total_amount" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="address_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="to_approve_id"/>
                                <field name="journal_id" domain="[('type', '=', 'purchase')]"
                                       groups="account.group_account_user"
                                       options="{'no_open': True, 'no_create': True}"
                                       invisible="1"/>
                                <field name="bank_journal_id" groups="account.group_account_user"
                                       options="{'no_open': True, 'no_create': True}"
                                       invisible="1"
                                       domain="[('type', 'in', ['cash', 'bank'])]"/>
                                <field name="accounting_date" groups="account.group_account_user"
                                       attrs="{'invisible': [('state', 'not in', ['approve', 'post', 'done'])]}"/>
                                <field name="account_move_id" invisible="1"/>
                            </group>
                        </group>

                        <notebook colspan="1">
                            <page string='报销明细'>
                                <field name="expense_line_ids"
                                       attrs="{'readonly':[('state','not in',('done','draft','cancel','approve'))]}"
                                       context="{'default_employee_id':employee_id,'default_department_id':department_id,'default_state':'draft'}">
                                    <tree editable="bottom">
                                        <field name="name" string="消费用途"/>
                                        <field name="product_id" options="{'no_create':True}" string="费用类别"/>
                                        <field name="state" invisible="1"/>
                                        <field name="account_id" groups="account.group_account_user"
                                               attrs="{'no_create':True}"/>
                                        <field name="unit_amount" sum="Total Amount" widget="monetary" string="金额"
                                               readonly="0"/>
                                        <field name="analytic_account_id" groups="analytic.group_analytic_accounting"
                                               invisible="1"/>
                                        <field name="message_unread" invisible="1"/>
                                        <field name="attachment_number" invisible="1"/>
                                        <field name="attachment_number" string=" "/>
                                        <button name="action_get_attachment_view" string="View Attachments"
                                                type="object"
                                                icon="fa-paperclip"/>
                                        <field name="analytic_account_id" string="项目" options="{'no_create':True}"/>
                                        <field name="sale_id" string="订单" options="{'no_create':True}"/>
                                        <field name="quantity" groups="account.group_account_user"/>
                                        <field name="tax_ids" widget="many2many_tags"/>
                                        <field name="employee_id" required="1" invisible="1"/>
                                        <field name="department_id" required="1" invisible="1"/>
                                        <field name="state" invisible="1"/>
                                        <field name="description" groups="account.group_account_user"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <div class="oe_button_box">
                                                <button name="action_get_attachment_view"
                                                        class="oe_stat_button"
                                                        icon="fa-book"
                                                        type="object">
                                                    <field name="attachment_number" widget="statinfo"
                                                           string="Documents"/>
                                                </button>
                                            </div>
                                            <div class="oe_title">
                                                <label for="name"/>
                                                <h1>
                                                    <field name="name" placeholder="e.g. Lunch with Customer"/>
                                                </h1>
                                            </div>
                                            <group>
                                                <group>
                                                    <field name="product_id" context="{'default_can_be_expensed': 1}"
                                                           options="{'no_create':True}"/>
                                                    <field name="unit_amount" required="1" widget="monetary"
                                                           options="{'currency_field': 'currency_id'}" string="金额"/>
                                                    <field name="quantity" class="oe_inline" invisible="1"/>
                                                    <field name="product_uom_id" widget="selection" class="oe_inline"
                                                           groups="product.group_uom" invisible="1"/>
                                                    <field name="tax_ids" domain="[('type_tax_use', '=', 'purchase')]"
                                                           widget="many2many_tags" options="{'no_create':True}"/>
                                                </group>
                                                <group>
                                                    <field name="reference"/>
                                                    <field name="doc" widget="binary"/>
                                                    <field name="date"/>
                                                    <field name="state" invisible="1"/>
                                                    <field name="account_id"/>
                                                    <field name="employee_id" readonly="1" required="1"/>
                                                    <field name="department_id" readonly="1" required="1"/>
                                                    <field name="sheet_id" invisible="1"/>
                                                    <field name="currency_id" groups="base.group_multi_currency"
                                                           invisible="1"/>
                                                    <field name="analytic_account_id"
                                                           groups="analytic.group_analytic_accounting" string="项目"
                                                           options="{'no_create':True}"/>
                                                    <field name="company_id" groups="base.group_multi_company"/>
                                                </group>
                                                <group>
                                                    <field name="total_amount" widget='monetary'
                                                           options="{'currency_field': 'currency_id'}" invisible="1"/>
                                                    <div>
                                                        <field name="payment_mode" widget="radio" invisible="1"/>
                                                    </div>
                                                </group>

                                            </group>

                                        </sheet>
                                    </form>
                                </field>
                            </page>

                            <page string="暂支抵扣明细" attrs="{'invisible':[('has_payment_line_ids','=',False)]}">
                                <field name="account_payment_line_ids" readonly="1">
                                    <tree>
                                        <field name="payment_name"/>
                                        <field name="accounting_date"/>
                                        <field name="amount"/>
                                    </tree>

                                </field>

                            </page>


                            <page string="付款信息" attrs="{'invisible':[('has_payment_ids','=',False)]}">
                                <field name="account_payment_ids" readonly="1">
                                    <tree>
                                        <field name="display_name"/>
                                        <field name="payment_date"/>
                                        <field name="journal_id"/>
                                        <field name="amount" sum="总计"/>
                                        <!--<field name="account_id"/>-->
                                    </tree>

                                </field>

                            </page>


                        </notebook>

                        <field name="has_payment_ids"/>

                        <field name="has_payment_line_ids" invisible="1"/>


                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>


                <!--<xpath expr="//button[@name='%(hr_expense.hr_expense_refuse_wizard_action)d']" position="replace">-->
                <!--<button name="%(hr_expense.hr_expense_refuse_wizard_action)d"-->
                <!--states="submit,manager1_approve,manager2_approve,manager3_approve" string="Refuse"-->
                <!--type="action" groups="hr_expense.group_hr_expense_user"/>-->
                <!--</xpath>-->

                <!--<xpath expr="//button[@name='action_sheet_move_create']" position="replace">-->
                <!---->
                <!--</xpath>-->


            </field>
        </record>


        <record id="linkloving_view_expenses_tree" model="ir.ui.view">
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="expense_no" string="Expense No"/>
                    <field name="create_date"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="product_id" string="产品"/>
                </xpath>

            </field>
        </record>

        <record id="hr_expense.hr_expense_form_view" model="ir.ui.view">
            <field name="name">hr.expense.form</field>
            <field name="model">hr.expense</field>
            <field eval="25" name="priority"/>
            <field name="arch" type="xml">
                <form string="Expenses">
                    <header>
                        <button name="submit_expenses" states="draft" string="Submit to Manager" type="object"
                                class="oe_highlight o_expense_submit"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,reported,done"/>
                        <button name="view_sheet" type="object" string="View Report" class="oe_highlight"
                                attrs="{'invisible': [('state', '=','draft')]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button name="action_get_attachment_view"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object">
                                <field name="attachment_number" widget="statinfo" string="Documents"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. Lunch with Customer"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="product_id" context="{'default_can_be_expensed': 1}" attrs="{}"/>
                                <field name="unit_amount" required="1" widget="monetary"
                                       options="{'currency_field': 'currency_id'}"/>
                                <label for="quantity"/>
                                <div>
                                    <field name="quantity" class="oe_inline"/>
                                    <field name="product_uom_id" widget="selection" class="oe_inline"
                                           groups="product.group_uom"/>
                                </div>
                                <field name="tax_ids" domain="[('type_tax_use', '=', 'purchase')]"
                                       widget="many2many_tags" groups="base.group_no_one"/>
                            </group>
                            <group>
                                <field name="reference"/>
                                <field name="date"/>
                                <field name="account_id"/>
                                <field name="employee_id"/>
                                <field name="sheet_id" invisible="1"/>
                                <field name="currency_id" groups="base.group_multi_currency"/>
                                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="total_amount" widget='monetary'
                                       options="{'currency_field': 'currency_id'}"/>
                                <label for="payment_mode"/>
                                <div>
                                    <field name="payment_mode" widget="radio"/>
                                </div>
                            </group>

                        </group>
                        <div>
                            <field name="description" placeholder="Notes..."/>
                        </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--财务的其他收入入口-->
        <record id="view_hr_expense_sheet_income_form" model="ir.ui.view">
            <field name="name">hr.expense.sheet.form</field>
            <field name="model">hr.expense.sheet</field>
            <field eval="26" name="priority"/>
            <field name="arch" type="xml">
                <form string="Expense Reports" class="o_expense_sheet">
                    <header>
                        <button name="hr_expense_sheet_post" states="draft" string="提交审核"
                                type="object" groups="base.group_user"
                                class="oe_highlight o_expense_sheet_post"/>
                        <button name="manager1_approve" string="Post" type="object"
                                groups="hr_expense.group_hr_expense_user" class="oe_highlight o_expense_sheet_approve"
                                attrs="{'invisible':[('state','!=','submit')]}"
                        />
                        <button name="manager2_approve" states="manager1_approve" string="Approve" type="object"
                                groups="hr_expense.group_hr_expense_manager"
                                class="oe_highlight o_expense_sheet_approve"/>
                        <button name="manager3_approve" states="manager2_approve" string="Approve" type="object"
                                groups="linkloveing_hr.group_hr_expense_president"
                                class="oe_highlight"/>
                        <button name="action_receive_payment" states="approve" string="Receivable Payment" type="object"
                                groups="account.group_account_user" class="oe_highlight o_expense_sheet_post"/>
                        <!--<button name="return_to_approve" type="action"-->
                        <!--string="返回" class="oe_highlight o_expense_sheet_pay"-->
                        <!--attrs="{'invisible': [('state', '!=', 'post')]}"-->
                        <!--groups="account.group_account_user"/>-->
                        <button name="%(hr_expense.hr_expense_register_payment_wizard_action)d" type="action"
                                string="Register Payment" class="oe_highlight o_expense_sheet_pay"
                                attrs="{'invisible': [('state', '!=', 'post')]}"
                                context="{'default_amount': total_amount, 'partner_id': address_id}"
                                groups="account.group_account_user"/>
                        <button name="reset_expense_sheets" states="cancel" string="Resubmit" type="object"/>
                        <button name="%(hr_expense.hr_expense_refuse_wizard_action)d" states="submit" string="Refuse"
                                type="action" groups="hr_expense.group_hr_expense_user"/>
                        <button name="%(hr_expense.hr_expense_refuse_wizard_action)d" states="approve" string="Refuse"
                                type="action" groups="account.group_account_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,approve,post,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button name="action_get_attachment_view"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    type="object">
                                <field name="attachment_number" widget="statinfo" string="Documents"/>
                            </button>
                            <button name="action_open_journal_entries"
                                    class="oe_stat_button"
                                    icon="fa-book"
                                    string="Accounting Entries"
                                    attrs="{'invisible': [('account_move_id', '=', False)]}"
                                    type="object">
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="expense_no" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" domain="[('customer','=',True),('is_company','=',True)]"
                                       string="Source" options="{'no_create': True}" invisible="0" required="1"/>
                                <field name="employee_id"/>
                                <field name="to_approve_id" string="Waiting Approve By" invisible="1"/>
                                <field name="is_show" invisible="1"/>
                                <field name="payment_mode"/>
                                <field name="responsible_id" invisible="1"/>
                                <field name="department_id" required="1" options="{'no_create': True}"/>
                                <field name="total_amount" invisible="1"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="address_id" invisible="1"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="journal_id" domain="[('type', '=', 'purchase')]"
                                       groups="account.group_account_user"
                                       options="{'no_open': True, 'no_create': True}"
                                       attrs="{'invisible': [('payment_mode', '!=', 'own_account')]}"/>
                                <field name="bank_journal_id" groups="account.group_account_user"
                                       options="{'no_open': True, 'no_create': True}"

                                       attrs="{'invisible': [('payment_mode', '!=', 'company_account')]}"
                                       domain="[('type', 'in', ['cash', 'bank'])]"/>
                                <field name="accounting_date" groups="account.group_account_user"
                                       attrs="{'invisible': [('state', 'not in', ['approve', 'post', 'done'])],'required':[('state','in',['approve', 'post', 'done'])]}"/>
                                <field name="account_move_id" invisible="1"/>
                            </group>
                        </group>
                        <field name="expense_line_ids" nolabel="1" domain="[]"
                               context="{'default_employee_id':employee_id,'default_department_id':department_id,'default_state':'draft'}">
                            <tree editable="top">
                                <field name="date"/>
                                <field name="product_id" options="{'no_create': True}"
                                       domain="[('can_be_expensed','=',True)]"/>
                                <field name="name"/>
                                <field name="state" invisible="1"/>
                                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"
                                       invisible="1"/>
                                <field name="message_unread" invisible="1"/>
                                <field name="attachment_number" invisible="1"/>
                                <field name="unit_amount"/>
                                <field name="attachment_number" string=" "/>
                                <button name="action_get_attachment_view" string="View Attachments" type="object"
                                        icon="fa-paperclip"/>
                                <field name="tax_ids" widget="many2many_tags" invisible="1"/>
                                <field name="total_amount" sum="Total Amount" widget="monetary"/>
                            </tree>
                        </field>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_hr_expense_sheet_to_receive" model="ir.actions.act_window">
            <field name="name">hr.expense.sheet.received</field>
            <field name="res_model">hr.expense.sheet</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_expense.view_hr_expense_sheet_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('linkloveing_hr.view_hr_expense_sheet_income_form')})]"/>
            <field name="context">{'default_income':True}</field>
            <field name="domain">[('income','=',True)]</field>

            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem id="menu_hr_expense_sheet_to_receive" name="Accounting Use Only" sequence="5"
                  parent="hr_expense.menu_hr_expense_accountant"
                  action="action_hr_expense_sheet_to_receive"/>

        <record id="hr_expense_sheet_actions_my_draft" model="ir.actions.act_window">
            <field name="name">我的报销单</field>
            <field name="res_model">hr.expense.sheet</field>
            <field name="domain">[('employee_id.user_id', '=', uid),('state','=','draft')]</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_expense.view_hr_expense_sheet_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('hr_expense.view_hr_expense_sheet_form')})]"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="hr_expense_sheet_actions_my_cancel" model="ir.actions.act_window">
            <field name="name">我被拒绝的报销单</field>
            <field name="res_model">hr.expense.sheet</field>
            <field name="domain">[('employee_id.user_id', '=', uid),('state','=','cancel')]</field>
            <field name="context">{'state':'cancel'}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('hr_expense.view_hr_expense_sheet_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('hr_expense.view_hr_expense_sheet_form')})]"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hr_expense.menu_hr_expense_my_expenses_to_submit" name="待提交的报销单" sequence="1"
                  parent="hr_expense.menu_hr_expense_my_expenses"
                  action="hr_expense_sheet_actions_my_draft"/>
        <menuitem id="hr_expense.menu_hr_expense_my_expenses_refused" name="退回的报销单" sequence="2"
                  parent="hr_expense.menu_hr_expense_my_expenses" action="hr_expense_sheet_actions_my_cancel"/>


    </data>
</openerp>