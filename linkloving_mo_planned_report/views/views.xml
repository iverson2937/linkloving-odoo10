    <data>
        <record id="view_planned_detail_report_tree" model="ir.ui.view">
            <field name="name">planned.detail.report.tree</field>
            <field name="model">planned.detail.report</field>
            <field name="arch" type="xml">
                <tree string="排产记录表">
                    <field name="name"/>
                    <field name="create_date"/>
                </tree>
            </field>
        </record>
        <record id="view_planned_detail_report_form" model="ir.ui.view">
            <field name="name">planned.detail.report.form</field>
            <field name="model">planned.detail.report</field>
            <field name="arch" type="xml">
                <form string="排产记录表">
                    <header>
                        <button name="action_view_detail_report" string="查看详细报表" class="oe_highlight" type="object"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="sale_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="pi_number"/>
                                    <field name="validity_date"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

