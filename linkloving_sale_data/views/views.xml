<odoo>
    <data>
        <record id="product_template_search_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='my_sale_orders_filter']" position="before">
                    <filter string="未发货完全订单制销售单" name="by_order"
                            domain="[('by_order','=',True),('shipping_status','!=','done'),('state','=','sale')]"
                            help='未发货完全订单制销售单'/>
                </xpath>


            </field>
        </record>


        <record id="action_sale_order_by_order" model="ir.actions.act_window">
            <field name="name">订单制销售单</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_type">form</field>
            <field name="context">{'search_default_by_order': True}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_sale_order_line" model="ir.actions.act_window">
            <field name="name">销售单明细</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5,0,0),
            (0,0,{'view_mode':'tree', 'view_id': ref('sale.view_order_line_tree')}),
            (0,0,{'view_mode':'form', 'view_id': False}),
            ]"/>
        </record>

        <record id="view_sales_order_line_manufacture_tree" model="ir.ui.view">
            <field name="name">sale.order.line.select</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="order_id"/>
                    <field name="order_partner_id"/>
                    <field name="pi_number"/>
                    <field name="validity_date"/>
                    <field name="product_id"/>
                    <field name="product_uom_qty"/>
                    <field name="qty_delivered"/>
                    <field name="remark"/>

                </tree>


            </field>
        </record>

        <record id="action_sale_order_line_manufacture" model="ir.actions.act_window">
            <field name="name">销售单明细</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5,0,0),
            (0,0,{'view_mode':'tree', 'view_id': ref('view_sales_order_line_manufacture_tree')}),
            (0,0,{'view_mode':'form', 'view_id': False}),
            ]"/>
        </record>


        <menuitem action="action_sale_order_line"
                  id="menu_sale_order_line" parent="linkloving_sale.menu_sales_orders"
                  sequence="100" name="销售单明细"/>


        <menuitem id="menu_sale_order_by_order"
                  name="订单制销售单"
                  parent="mrp.menu_mrp_reporting"
                  action="action_sale_order_by_order"
                  sequence="10"/>


        <menuitem id="menu_mrp_production_report"
                  name="销售单明细"
                  parent="mrp.menu_mrp_reporting"
                  action="action_sale_order_line_manufacture"
                  sequence="11"/>


        <menuitem id="menu_products_report"
                  name="产品报告"
                  parent="sales_team.menu_sale_report"
                  action="action_product_product_list_wizard"
                  sequence="12"/>


    </data>
</odoo>