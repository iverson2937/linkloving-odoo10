<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id='product_product_list_wizard_form' model='ir.ui.view'>
            <field name='name'>product.product.list.wizard.form</field>
            <field name='model'>product.product.list.wizard</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form name='打印报表'>
                    <group>
                        <group>
                            <field name='start_date' required='1' string="开始时间"/>
                            <field name="report_type" widget="radio" string="类型"/>
                        </group>
                        <group>
                            <field name='end_date' required='1' string="结束时间"/>
                        </group>
                    </group>
                    <group>
                    </group>

                    <footer>
                        <button name='print_report' type='object' string='打印报表' class='oe_highlight'/>
                        or
                        <button string='取消' class='oe_link' special='cancel'/>
                    </footer>
                </form>
            </field>
        </record>


        <record id='action_product_product_list_wizard' model='ir.actions.act_window'>
            <field name='name'>产品报表</field>
            <field name='res_model'>product.product.list.wizard</field>
            <field name='view_type'>form</field>
            <field name='view_mode'>form</field>
            <field name='target'>new</field>
        </record>

    </data>
</openerp>