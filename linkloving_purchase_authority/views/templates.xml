<odoo>
    <data>
        <record id="purchase_account_payment_register_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.register</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="linkloving_account.purchase_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr='//div[@name="confirm"]' position='replace'>
                    <button name="to_manager_approve" string="送审经理" type="object" class="oe_highlight"
                            states="posted" groups="purchase.group_purchase_manager"/>

                    <button name="confirm" string="确认" type="object" class="oe_highlight"
                            states="manager" groups="linkloving_purchase_authority.purchase_manager_plus"/>
                </xpath>
                <xpath expr='//div[@name="reject"]' position='attributes'>
                    <attribute name="states">posted,manager,confirm</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>



