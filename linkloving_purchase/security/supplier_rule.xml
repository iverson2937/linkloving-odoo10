<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="my_follows_vendor" model="ir.rule">
        <field name="name">我跟单的供应商</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">
            ['|','|',('po_user_id','=',user.id),('po_user_id','=',False),('customer','=',True)]
        </field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>
    <record id="all_supplier" model="ir.rule">
        <field name="name">所有供应商</field>
        <field ref="base.model_res_partner" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]
        </field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
    </record>

    <record id="my_orders" model="ir.rule">
        <field name="name">我的订单</field>
        <field ref="purchase.model_purchase_order" name="model_id"/>
        <field name="domain_force">['|',('user_id', '=', user.id),('create_uid', '=',
            user.id),('partner_id.po_user_id','=',user.id)]
        </field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_user'))]"/>
    </record>

    <record id="my_team_orders" model="ir.rule">
        <field name="name">我团队的订单</field>
        <field ref="purchase.model_purchase_order" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
    </record>

</odoo>

