<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="purchase_product_template_tree_view" model="ir.ui.view">
            <field name="name">product.template.purchase</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree string="Product" decoration-danger="forecast_qty&lt;0"
                      decoration-info="virtual_available&gt;=0">
                    <field name="sequence" widget="handle"/>
                    <field name="default_code"/>
                    <field name="name"/>
                    <field name="list_price" invisible="1"/>
                    <field name="standard_price"/>
                    <field name="stock"/>
                    <field name="forecast_qty" string="预测"/>
                    <field name="reordering_min_qty"/>
                    <field name="reordering_max_qty"/>
                    <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="product.group_uom"/>
                    <field name="active" invisible="1"/>
                </tree>


            </field>
        </record>

    </data>
</openerp>









