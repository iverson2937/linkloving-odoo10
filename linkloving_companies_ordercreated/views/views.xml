<openerp>
    <data>

        <record id="action_sub_company_report" model="ir.actions.client">
            <field name="name">跨系统订单报表</field>
            <field name="tag">sub_company_report</field>
        </record>

        <menuitem id="menuitem_sub_company_report"
                  action="action_sub_company_report"
                  name="跨系统订单报表"
                  parent="sales_team.menu_sale_report"
                  sequence="2"
                  groups="sales_team.group_sale_manager"/>

        <record id="crm_view_partner_form_linkloving" model="ir.ui.view">
            <field name="name">crm form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='o_row']" position="before">
                    <div t-if="employee">
                        <group>
                            <field name="sub_company" widget="radio"
                                   attrs="{'invisible':['|',('company_type', '!=', 'company')]}"/>
                        </group>
                    </div>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page string="子公司信息配置" attrs="{'invisible': [('sub_company', '!=', 'sub')]}" autofocus="autofocus">
                        <group>
                            <field name="sub_company_id" attrs="{'required': [('sub_company', '=', 'sub')]}"/>
                            <field name="follow_partner_id"/>
                            <field name="discount_to_sub" attrs="{'required': [('sub_company', '=', 'sub')]}"/>
                        </group>
                    </page>
                    <page string="下单公司信息配置" attrs="{'invisible': [('sub_company', '!=', 'main')]}"
                          autofocus="autofocus">
                        <group>
                            <field name="main_company_id" attrs="{'required': [('sub_company', '=', 'main')]}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">Purchase Order</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']" position="before">
                    <!-- Add your fields or attributes here -->
                    <field name="sub_company" invisible="1"/>
                    <button name="get_precost_price"
                            string="获取产品价格"
                            class="oe_highlight pull-right"
                            type="object"
                            attrs="{'invisible': ['|', ('sub_company', '!=', 'sub'), ('state', 'in', ('done', 'cancel', 'purchase'))],}">
                        获取产品价格
                    </button>
                </xpath>

            </field>
        </record>
        <menuitem
                id="menu_sub_company_cate"
                name="下属公司设置"
                parent="base.menu_administration"
                sequence="3"
                groups="base.group_system"/>

        <record id="follow_partner_tree" model="ir.ui.view">
            <field name="name">跟单员信息</field>
            <field name="model">follow.order.partner</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="prefix_name" required="1"/>
                    <field name="follow_partner_id" required="1"/>
                </tree>
            </field>
        </record>

        <record id="follow_partner_form" model="ir.ui.view">
            <field name="name">跟单员信息</field>
            <field name="model">follow.order.partner</field>
            <field name="arch" type="xml">
                <form string="跟单员信息">
                    <sheet>
                        <group>
                            <field name="prefix_name" required="1"/>
                            <field name="follow_partner_id" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_follow_partner" model="ir.actions.act_window">
            <field name="name">跟单员信息</field>
            <field name="res_model">follow.order.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="sub_company_info_tree" model="ir.ui.view">
            <field name="name">下属公司信息</field>
            <field name="model">sub.company.info</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="host"/>
                    <field name="db_name"/>
                </tree>
            </field>
        </record>

        <record id="sub_company_info_form" model="ir.ui.view">
            <field name="name">下属公司信息</field>
            <field name="model">sub.company.info</field>
            <field name="arch" type="xml">
                <form string="下属公司信息">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="host" required="1"/>
                            <field name="db_name" required="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_sub_company_info" model="ir.actions.act_window">
            <field name="name">下属公司信息</field>
            <field name="res_model">sub.company.info</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menu_sub_company_info"
                  name="下属公司信息"
                  parent="menu_sub_company_cate"
                  action="action_sub_company_info"
                  sequence="1"/>

        <menuitem id="menu_follow_partner"
                  name="跟单员信息"
                  parent="menu_sub_company_cate"
                  action="action_follow_partner"
                  sequence="2"/>

    </data>
</openerp>