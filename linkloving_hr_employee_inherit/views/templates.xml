<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_inherit_form" model="ir.ui.view">
        <field name="name">hr.timesheet.employee.extd_form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="replace">

            </xpath>
            <xpath expr="//field[@name='work_email']" position="attributes">
                <attribute name="required">1</attribute>

            </xpath>


            <xpath expr="//field[@name='work_email']" position="replace">
                <label for="work_email"/>
                <div name="carrier_selection">
                    <div>
                        <field name="work_email" string="用户名"/>
                    </div>
                    <div>
                        <field name="user_id" class="oe_inline"/>
                        <button name="set_user" string="设置用户" type="object" class="oe_inline fa fa-arrow-right oe_link"
                                attrs="{'invisible':[('user_id','!=',False)]}"/>
                        <button name="set_user_groups" string="设置用户权限" type="object"
                                class="oe_inline fa fa-arrow-right oe_link"
                                attrs="{'invisible':[('user_id','=',False)]}"/>
                    </div>
                </div>


            </xpath>

        </field>
    </record>
</odoo>